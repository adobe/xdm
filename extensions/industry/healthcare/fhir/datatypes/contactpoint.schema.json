   "$schema":"http://json-schema.org/draft-06/schema#",
   "$id":"https://ns.fhir.org/datatypes/contactpoint",
   "title":"Contact Point",
   "type":"object",
   "description":"A contact detail for the person.(This datatype is created as per HL7 FHIR Release 5 specifications)",
   "definitions":{
      "contactPoint":{
         "properties":{
            "xdm:system":{
               "title":"System",
               "description":"phone | fax | email | pager | url | sms | other.",
               "type":"string",
               "enum":[
                  "phone",
                  "fax",
                  "email",
                  "pager",
                  "url",
                  "sms",
                  "other"
               ],
               "meta:enum":{
                  "phone":"Phone",
                  "fax":"Fax",
                  "email":"Email",
                  "pager":"Pager",
                  "url":"URL",
                  "sms":"SMS",
                  "other":"Other"
               }
            },
            "xdm:value":{
               "title":"Value",
               "type":"string",
               "description":"The actual contact point details."
            },
            "xdm:use":{
               "title":"Use",
               "description":"home | work | temp | old | mobile - purpose of this contact point",
               "type":"string",
               "enum":[
                  "home",
                  "work",
                  "temp",
                  "old",
                  "mobile"
               ],
               "meta:enum":{
                  "home":"Home",
                  "work":"Work",
                  "temp":"Temp",
                  "old":"Old",
                  "mobile":"Mobile"
               }
            },
            "xdm:rank":{
               "title":"Rank",
               "type":"integer",
               "minimum":1,
               "maximum":2147483647,
               "description":"Specify preferred order of use (1 = highest)"
            },
            "xdm:period":{
               "title":"Period",
               "description":"Time period when the contact point was/is in use.",
               "$ref":"https://ns.fhir.org/datatypes/period"
            }
         }
      }
   },
   "allOf":[
      {
         "$ref":"#/definitions/contactPoint"
      }
   ],
   "meta:status":"experimental"
}

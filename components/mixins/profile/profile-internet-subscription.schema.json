  "title": "Internet Subscription",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": ["telecom"]
  },
  "meta:extends": [
    "https://ns.adobe.com/xdm/mixins/profile/profile-telecom-subscription"
  ],
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "description": "Internet subscription plan details such as data cap, connection type, and speed details.",
  "definitions": {
    "internet-subscription": {
      "properties": {
        "xdm:internetSubscription": {
          "type": "object",
          "properties": {
            "xdm:dataCap": {
              "title": "Data Cap",
              "type": "integer",
              "description": "Captures the data cap limit for the account, in megabytes (MB).",
              "meta:titleId": "profile-internet-subscription##xdm:dataCap##title",
              "meta:descriptionId": "profile-internet-subscription##xdm:dataCap##description"
            },
            "xdm:connectionType": {
              "title": "Connection Type",
              "type": "string",
              "enum": ["cable", "dsl", "fiber", "mobile", "satellite"],
              "meta:enum": {
                "cable": "Cable",
                "dsl": "DSL",
                "fiber": "Fiber",
                "mobile": "Mobile",
                "satellite": "Satellite"
              },
              "description": "Tracks the type of connection type for the subscription.",
              "meta:titleId": "profile-internet-subscription##xdm:connectionType##title",
              "meta:descriptionId": "profile-internet-subscription##xdm:connectionType##description"
            },
            "xdm:downloadSpeed": {
              "title": "Download Speed",
              "type": "integer",
              "description": "Records the maximum download speed available for the subscription, in megabytes (MB).",
              "meta:titleId": "profile-internet-subscription##xdm:downloadSpeed##title",
              "meta:descriptionId": "profile-internet-subscription##xdm:downloadSpeed##description"
            },
            "xdm:uploadSpeed": {
              "title": "Upload Speed",
              "type": "integer",
              "description": "Records the maximum upload speed available for the subscription, in megabytes (MB).",
              "meta:titleId": "profile-internet-subscription##xdm:uploadSpeed##title",
              "meta:descriptionId": "profile-internet-subscription##xdm:uploadSpeed##description"
            },
            "xdm:selfSetup": {
              "title": "Self-Setup",
              "type": "boolean",
              "description": "Flags if a customer is eligible for internet setup without a technican visit.",
              "meta:titleId": "profile-internet-subscription##xdm:selfSetup##title",
              "meta:descriptionId": "profile-internet-subscription##xdm:selfSetup##description"
            }
          }
        }
      }
    }
  },

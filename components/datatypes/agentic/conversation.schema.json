  "$id": "https://ns.adobe.com/xdm/datatypes/agentic/conversation",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Conversation",
  "type": "object",
  "meta:extensible": true,
  "description": "Construct to represent agents, agent skills, etc.",
  "definitions": {
    "conversationId": {
      "properties": {
        "xdm:id": {
          "title": "Conversation ID",
          "type": "string",
          "description": "ID to group several interactions together"
        }
      }
    },
    "interactionId": {
      "properties": {
        "xdm:id": {
          "title": "Interaction ID",
          "type": "string",
          "description": "A single instance of a prompt, response, and feedback"
        }
      }
    },
    "source": {
      "properties": {
        "xdm:source": {
          "title": "Source",
          "type": "string",
          "description": "Source of this element",
          "examples": ["end-user", "bot", "canned"]
        }
      }
    },
    "raw": {
      "properties": {
        "xdm:raw": {
          "title": "Raw Text",
          "type": "string",
          "description": "Raw text element of a conversation"
        }
      }
    },
    "operations": {
      "properties": {
        "xdm:operations": {
          "title": "Conversational Operations",
          "type": "object",
          "description": "Object containing operational information",
          "properties": {
            "xdm:cached": {
              "title": "Cached",
              "type": "boolean",
              "description": "Whether this conversation element was cached"
            }
          }
        }
      }
    },
    "feedback-rating": {
      "properties": {
        "xdm:rating": {
          "title": "Rating",
          "type": "object",
          "description": "Rating data for the feedback",
          "properties": {
            "xdm:score": {
              "title": "Rating Score",
              "type": "number",
              "description": "Numerical value of the rating provided by the end-user. For example: 0, 1 might be used for thumbs up/down."
            },
            "xdm:classification": {
              "title": "Rating Classification",
              "type": "string",
              "description": "String/enum value of the rating provided by the end-user.",
              "examples": [
                "Thumbs Up",
                "Thumbs Down",
                "Positive",
                "Negative",
                "5-stars",
                "1-star"
              ]
            },
            "xdm:reasons": {
              "title": "Rating Reasons",
              "type": "array",
              "description": "Reasons why the customer provided this rating.",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "prompt": {
      "properties": {
        "xdm:prompt": {
          "title": "Prompt",
          "type": "object",
          "description": "Object representing a conversation prompt",
          "allOf": [
            { "$ref": "#/definitions/source" },
            { "$ref": "#/definitions/raw" }
          ]
        }
      }
    },
    "response": {
      "properties": {
        "xdm:response": {
          "title": "Response",
          "type": "object",
          "description": "Object representing a conversation response",
          "allOf": [
            { "$ref": "#/definitions/source" },
            { "$ref": "#/definitions/raw" },
            { "$ref": "#/definitions/operations" }
          ]
        }
      }
    },
    "feedback": {
      "properties": {
        "xdm:feedback": {
          "title": "Feedback",
          "type": "object",
          "description": "Object representing a conversation feedback",
          "allOf": [
            { "$ref": "#/definitions/source" },
            { "$ref": "#/definitions/raw" },
            { "$ref": "#/definitions/feedback-rating" }
          ]
        }
      }
    },
    "conversation": {
      "properties": {
        "xdm:conversation": {
          "title": "Conversation",
          "type": "object",
          "description": "Object representing a conversation that includes prompt, response, and feedback with associated metadata",
          "allOf": [
            { "$ref": "#/definitions/conversationId" },
            { "$ref": "#/definitions/interactionId" },
            { "$ref": "#/definitions/prompt" },
            { "$ref": "#/definitions/response" },
            { "$ref": "#/definitions/feedback" }
          ]
        }
      }
    }
  },
  "allOf": [{ "$ref": "#/definitions/conversation" }],
  "meta:status": "experimental"
}

{
  "xdm:finalUrlSuffix": "utm_source=facebook&utm_medium=messenger&utm_campaign={{campaign.name}}&utm_content={{ad.name}}&fbclid={{ad.id}}",
  "xdm:customParameters": [
    {
      "xdm:key": "utm_source",
      "xdm:value": "facebook"
    },
    {
      "xdm:key": "utm_medium",
      "xdm:value": "messenger"
    },
    {
      "xdm:key": "utm_campaign",
      "xdm:value": "{{campaign.name}}"
    },
    {
      "xdm:key": "utm_content",
      "xdm:value": "{{ad.name}}"
    },
    {
      "xdm:key": "fbclid",
      "xdm:value": "{{ad.id}}"
    },
    {
      "xdm:key": "messenger_placement",
      "xdm:value": "{{placement}}"
    },
    {
      "xdm:key": "network",
      "xdm:value": "meta"
    }
  ]
}

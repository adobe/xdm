    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://ns.adobe.com/experience/adcloud/search/campaign-all",
    "title": "Adobe AdCloud Search Campaign Entity Full Extension",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "meta:intendedToExtend": [
        "https://ns.adobe.com/xdm/context/profile-adcloud"
    ],
    "description": "Adobe AdCloud Search Campaign Entity Full Extension. Contains all Solution added fields.",
    "definitions": {
        "campaign-all": {
            "properties": {
                "campaign": {
                    "title": "Adobe Ad Cloud Search Campaign Top Level Attributes",
                    "$ref": "https://ns.adobe.com/experience/adcloud/search/advertisingattributes",
                    "description": "Adobe AdCloud Top Level Attributes for Campaign Entity."
                },
                "accountId": {
                    "title": "Internal Account Id of the Campaign",
                    "type": "integer",
                    "description": "Internal Account the Campaign belongs to."
                },
                "portfolioId": {
                    "title": "Portfolio Id",
                    "type": "integer",
                    "description": "Portfolio Id assigned to the Campaign"
                },
                "mobileBidAdjustment": {
                    "title": "Mobile Bid Adjustment",
                    "type": "integer",
                    "description": "Mobile Bid Adjustment"
                },
                "channelType": {
                    "title": "Channel Type",
                    "type": "string",
                    "description": "Channel Type for the Campaign"
                },
                "budget": {
                    "title": "Budget",
                    "type": "number",
                    "format": "double",
                    "description": "Budget Allocated to the Campaign"
                },
                "budgetType": {
                    "title": "Budget Type",
                    "type": "string",
                    "description": "Budget Type",
                    "meta:enum": {
                        "daily": "Daily",
                        "monthly": "Monthly",
                        "lifetime": "Lifetime",
                        "daily spend until depleted": "Daily spend until depleted",
                        "day of week": "Day of week"
                    }
                },
                "deliveryType": {
                    "title": "Ad Delivery Method",
                    "type": "string",
                    "description": "Ad Delivery method can determine how long your budget lasts",
                    "meta:enum": {
                        "standard": "Standard",
                        "accelerated": "Accelerated"
                    }
                },
                "objective": {
                    "title": "Objective",
                    "type": "string",
                    "description": "Campaign Objective",
                    "meta:enum": {
                        "visit_web": "visit_web",
                        "promote_brand": "promote_brand",
                        "install_app": "install_app",
                        "visit_offer": "visit_offer"
                    }
                },
                "startDate": {
                    "title": "Start Date",
                    "type": "string",
                    "format": "date",
                    "description": "Campaign Start Date"
                },
                "endDate": {
                    "title": "End Date",
                    "type": "string",
                    "format": "date",
                    "description": "Campaign End Date"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "https://ns.adobe.com/xdm/context/profile-adcloud#/definitions/profile-adcloud"
        },
        {
            "$ref": "#/definitions/campaign-all"
        }
    ],
    "meta:status": "experimental"
}

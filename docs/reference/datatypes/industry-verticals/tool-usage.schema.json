    "$id": "https://ns.adobe.com/xdm/datatypes/tool-usage",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Tool Usage",
    "type": "object",
    "meta:extensible": true,
    "description": "Tool usage comprises the most common steps used in a site tool or utility, such as calculators, registrations, and requests for more information.",
    "definitions": {
        "tool-usage": {
            "properties": {
                "xdm:cancelled": {
                    "title": "Cancelled",
                    "type": "integer",
                    "description": "Captured when a visitor cancels out of a tool usage process.",
                    "meta:titleId": "tool-usage##xdm:cancelled##title##40461",
                    "meta:descriptionId": "tool-usage##xdm:cancelled##description##30591"
                },
                "xdm:complete": {
                    "title": "Complete",
                    "type": "integer",
                    "description": "Captured when a visitor successfully finishes using any type of tool or utility on the site/app.",
                    "meta:titleId": "tool-usage##xdm:complete##title##13511",
                    "meta:descriptionId": "tool-usage##xdm:complete##description##75311"
                },
                "xdm:failure": {
                    "title": "Failed",
                    "type": "integer",
                    "description": "Captured when a step in the tool usage process fails.",
                    "meta:titleId": "tool-usage##xdm:failure##title##41661",
                    "meta:descriptionId": "tool-usage##xdm:failure##description##8821"
                },
                "xdm:ID": {
                    "title": "ID",
                    "type": "string",
                    "description": "Captures the ID of the tool process utilized, if applicable.  For example, this could be a claim, application, or booking ID, etc.",
                    "meta:titleId": "tool-usage##xdm:ID##title##29921",
                    "meta:descriptionId": "tool-usage##xdm:ID##description##15371"
                },
                "xdm:name": {
                    "title": "Name",
                    "type": "string",
                    "description": "Tracks the name of the tool in use.",
                    "meta:titleId": "tool-usage##xdm:name##title##73761",
                    "meta:descriptionId": "tool-usage##xdm:name##description##18311"
                },
                "xdm:saved": {
                    "title": "Saved",
                    "type": "integer",
                    "description": "Captured when a visitor saves and exits a tool usage process.",
                    "meta:titleId": "tool-usage##xdm:saved##title##22021",
                    "meta:descriptionId": "tool-usage##xdm:saved##description##45101"
                },
                "xdm:start": {
                    "title": "Start",
                    "type": "integer",
                    "description": "Captured when a visitor initializes using any type of tool or utility on the site/app.",
                    "meta:titleId": "tool-usage##xdm:start##title##42871",
                    "meta:descriptionId": "tool-usage##xdm:start##description##72681"
                },
                "xdm:step": {
                    "title": "Step",
                    "type": "integer",
                    "description": "Captured when any intermediary tool step is started on the site/app.",
                    "meta:titleId": "tool-usage##xdm:step##title##87371",
                    "meta:descriptionId": "tool-usage##xdm:step##description##42851"
                },
                "xdm:stepName": {
                    "title": "Step Name",
                    "type": "string",
                    "description": "Tracks the name of the tool step in use.",
                    "meta:titleId": "tool-usage##xdm:stepName##title##16891",
                    "meta:descriptionId": "tool-usage##xdm:stepName##description##76691"
                },
                "xdm:submitted": {
                    "title": "Submitted",
                    "type": "integer",
                    "description": "Captured when a visitor submits data during a tool step.  Not necessarily synonymous with a successful event.",
                    "meta:titleId": "tool-usage##xdm:submitted##title##43471",
                    "meta:descriptionId": "tool-usage##xdm:submitted##description##2751"
                },
                "xdm:transaction": {
                    "title": "Transaction",
                    "$ref": "https://ns.adobe.com/xdm/datatypes/transaction",
                    "description": "Extension of Transaction Data Type",
                    "meta:titleId": "tool-usage##xdm:transaction##title##77191",
                    "meta:descriptionId": "tool-usage##xdm:transaction##description##13441"
                },
                "xdm:type": {
                    "title": "Type",
                    "type": "string",
                    "description": "Tracks the type or category of the tool in use.",
                    "meta:titleId": "tool-usage##xdm:type##title##27391",
                    "meta:descriptionId": "tool-usage##xdm:type##description##60391"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/tool-usage"
        }
    ],
    "meta:status": "experimental",
    "meta:createdDate": "2021-02-19",
    "meta:titleId": "tool-usage##title##93041",
    "meta:descriptionId": "tool-usage##description##21191",

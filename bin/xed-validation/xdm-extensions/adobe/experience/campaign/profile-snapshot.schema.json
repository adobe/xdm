                },
                "xdm:directMarketingAddress": {
                    "title": "Direct Marketing Address",
                    "$refkept": "https://ns.adobe.com/xdm/context/directmarketing-address",
                    "description": "Direct Marketing postal address."
                },
                "xdm:directMarketingEmail": {

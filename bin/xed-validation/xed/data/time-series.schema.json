{
    "$id": "data/time-series.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Time-series Schema",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "description": "Used to indicate the behavior of time partitioned semantics when composed into data schemas.",
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "title": "Identifier",
            "type": "string",
            "format": "uri-reference",
            "description": "A unique identifier for the time-series event.",
            "meta:xdmType": "string",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "timestamp": {
            "title": "Timestamp",
            "type": "string",
            "format": "date-time",
            "description": "The time when an event or observation occurred.",
            "meta:xdmType": "date-time",
            "meta:xdmField": "xdm:timestamp",
            "tagNumber": 2
        },
        "eventType": {
            "title": "Event Type",
            "type": "string",
            "description": "The primary event type for this time-series record.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:eventType",
            "tagNumber": 3
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/time-series",
    "meta:altId": "_xdm.data.time-series"
}
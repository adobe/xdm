{
    "$id": "context/advertising-break.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Ad break",
    "type": "object",
    "description": "An ad break is an advertisement inserted into media content. Ad break describes how a timed advertising is inserted into a timed media.",
    "meta:extensible": true,
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "title": "Ad break ID",
            "format": "uri-reference",
            "type": "string",
            "description": "Identifier of the ad break.",
            "meta:xdmType": "string",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "_dc": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "title": {
                    "title": "Ad break name",
                    "type": "string",
                    "description": "The friendly name of the ad break.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dc:title",
                    "tagNumber": 1
                }
            },
            "tagNumber": 2
        },
        "offset": {
            "title": "Ad break offset",
            "type": "integer",
            "description": "The offset, in seconds, of the ad break from the start of the primary content.",
            "meta:xdmType": "int",
            "meta:xdmField": "xdm:offset",
            "tagNumber": 3
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/context/advertising-break",
    "meta:altId": "_xdm.context.advertising-break",
    "required": [
        "_id"
    ]
}
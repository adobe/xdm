{
    "$id": "adobe/experience/decisioning/proposition-metric-total.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Option Propositions Total",
    "type": "object",
    "meta:extensible": true,
    "description": "The total number a particular option was proposed so far across all profiles.",
    "meta:status": [
        "experimental",
        "stabilizing"
    ],
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "https://ns.adobe.com/experience/decisioning/propositionsTotal",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "option metric: total propositions",
                    "description": "The human-readable name of the metric. The name can be used in user interfaces and does not have to be unique.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name",
                    "tagNumber": 1
                }
            },
            "required": [
                "name"
            ],
            "tagNumber": 2
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement",
            "tagNumber": 3
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit",
            "tagNumber": 4
        }
    },
    "meta:xdmId": "https://ns.adobe.com/experience/decisioning/proposition-metric-total",
    "meta:altId": "_experience.decisioning.proposition-metric-total",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
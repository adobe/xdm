  "$id": "https://ns.adobe.com/experience/target/activity",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Target Activity",
  "type": "object",
  "description": "Represents Target Activity Events.",
  "definitions": {
    "activity": {
      "properties": {
        "xdm:activityId": {
          "title": "Activity Id",
          "type": "integer",
          "description": "Activity Id."
        },
        "xdm:version": {
          "title": "Version",
          "type": "integer",
          "description": "Activity Version."
        },
        "https://ns.adobe.com/experience/target/activity/preview": {
          "title": "Activity Preview",
          "type": "object",
          "description": "Activity Preview Parameters.",
          "properties": {
                  "xdm:forcedExperienceId": {
                    "title": "Experience Id",
                    "type": "integer",
                    "description": "Forced experience Id."
                  },
                  "xdm:evaluateAsTrueAudienceIds": {
                    "title": "evaluate as True audience Ids",
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "description": "Evaluated as matching audience Ids."
                  },
                  "xdm:evaluateAsFalseAudienceIds": {
                    "title": "Evaluate as False audience Ids",
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "description": "Evaluated as non-matching audience Ids."
                  }
                }
        },
        "xdm:activityevents": {
          "items": {
            "$ref": "https://ns.adobe.com/experience/target/activityevent"
          },
          "type": "array"
        },
        "required": [
          "activityId",
          "version"
        ]
      }
    },
    "allOf": [
      {
        "$ref": "#/definitions/activity"
      }
    ],
    "meta:status": "experimental"
  }
}

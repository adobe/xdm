  "$id": "https://ns.adobe.com/xdm/fieldgroups/agentic/conversationevent",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Conversation Event",
  "type": "object",
  "meta:extensible": true,
  "meta:tags": {
    "industry": ["all"]
  },
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/experienceevent"],
  "description": "Conversation Event data including agentic information, prompt, response, feedback an associated metadata.",
  "definitions": {
    "conversation": {
      "properties": {
        "xdm:eventType": {
          "title": "Event Type",
          "type": "string",
          "description": "The primary event type for this time-series record.",
          "meta:enum": {
            "conversation.turn": "Conversation Turn",
            "conversation.recommendation": "Conversation Recommendation",
            "conversation.feedback": "Conversation Feedback"
          }
        },
        "xdm:conversation": {
          "title": "Conversation",
          "type": "object",
          "description": "Object representing a conversation that includes prompt, response, and feedback with associated metadata",
          "properties": {
            "xdm:conversationID": {
              "title": "Conversation ID",
              "type": "string",
              "description": "ID to group several turns together"
            },
            "xdm:turnID": {
              "title": "Turn ID",
              "type": "string",
              "description": "A single instance of a prompt, response, and feedback"
            },
            "xdm:prompt": {
              "title": "Prompt",
              "type": "object",
              "description": "Object representing a conversation prompt",
              "properties": {
                "xdm:source": {
                  "title": "Prompt Source",
                  "type": "string",
                  "description": "Source of the prompt",
                  "examples": ["end-user", "bot", "canned"]
                },
                "xdm:raw": {
                  "type": "array",
                  "title": "Raw Text and Purpose",
                  "description": "Raw text with purpose of the text",
                  "items": {
                    "type": "object",
                    "properties": {
                      "xdm:text": {
                        "title": "Text",
                        "description": "Text",
                        "type": "string"
                      },
                      "xdm:purpose": {
                        "title": "Prompt Section Purpose",
                        "description": "Purpose of the prompt data. Users may input multiple things simultaneously such as text and a link or attachment.",
                        "type": "string",
                        "examples": ["free-form text", "attachment", "link"]
                      }
                    }
                  }
                }
              }
            },
            "xdm:response": {
              "title": "Response",
              "type": "object",
              "description": "Object representing a conversation response",
              "properties": {
                "xdm:source": {
                  "title": "Response Source",
                  "type": "string",
                  "description": "Source of the response",
                  "examples": ["end-user", "bot", "canned"]
                },
                "xdm:raw": {
                  "type": "array",
                  "title": "Raw Text and Purpose",
                  "description": "Raw text with purpose of the text",
                  "items": {
                    "type": "object",
                    "properties": {
                      "xdm:text": {
                        "title": "Text",
                        "description": "Text",
                        "type": "string"
                      },
                      "xdm:purpose": {
                        "title": "Response Section Purpose",
                        "description": "Purpose of the response data. Agents may respond with multiple things simultaneously such as text, video, links, pictures, etc.",
                        "type": "string",
                        "examples": ["main", "link", "picture", "video"]
                      }
                    }
                  }
                }
              }
            },
            "xdm:feedback": {
              "title": "Feedback",
              "type": "object",
              "description": "Object representing a conversation feedback",
              "properties": {
                "xdm:source": {
                  "title": "Feedback Source",
                  "type": "string",
                  "description": "Source of the feedback",
                  "examples": ["end-user", "bot", "canned"]
                },
                "xdm:raw": {
                  "type": "array",
                  "title": "Raw Text and Purpose",
                  "description": "Raw text with purpose of the text",
                  "items": {
                    "type": "object",
                    "properties": {
                      "xdm:text": {
                        "title": "Text",
                        "description": "Text",
                        "type": "string"
                      },
                      "xdm:purpose": {
                        "title": "Feedback Section Purpose",
                        "description": "Purpose of the feedback data. Users may input multiple things simultaneously such as text, screenshot, links, attachments, etc.",
                        "type": "string",
                        "examples": ["free-form text", "screenshot", "attachment", "link"]
                      }
                    }
                  }
                },
                "xdm:rating": {
                  "title": "Feedback Rating",
                  "type": "object",
                  "description": "Rating data for the feedback",
                  "properties": {
                    "xdm:score": {
                      "title": "Feedback Rating Score",
                      "type": "number",
                      "description": "Numerical value of the rating provided by the end-user ranging from -1.0 (negative) to 1.0 (positive)."
                    },
                    "xdm:classification": {
                      "title": "Feedback Rating Classification",
                      "type": "string",
                      "description": "String/enum value of the rating provided by the end-user.",
                      "examples": [
                        "Thumbs Up",
                        "Thumbs Down",
                        "Positive",
                        "Negative",
                        "5-stars",
                        "1-star"
                      ]
                    },
                    "xdm:reasons": {
                      "title": "Feedback Rating Reasons",
                      "type": "array",
                      "description": "Canned reasons why the customer provided this rating usually presented as a set of checkboxes.",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"
    },
    {
      "$ref": "#/definitions/conversation"
    }
  ],
  "meta:status": "experimental"
}

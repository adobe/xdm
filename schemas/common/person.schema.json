    "$id": "https://ns.adobe.com/xdm/common/person",
    "$schema": "http://json-schema.org/schema#",
    "title": "Person",
    "type": "object",
    "description": "An individual person. May represent a person acting in various roles, such as a customer, contact, or owner.",
    "definitions": {
        "person": {
            "properties": {
                "xdm:name": {
                    "title": "Full name",
                    "$ref": "https://ns.adobe.com/xdm/common/personname#/definitions/personname",
                    "description": "The person's full name"
                },
                "xdm:birthDay": {
                    "title": "Birth Day",
                    "type": "integer",
                    "description": "The day of the month a person was born (1-31).",
                    "minimum": 1,
                    "maximum": 31
                },
                "xdm:birthMonth": {
                    "title": "Birth Month",
                    "type": "integer",
                    "description": "The month of the year a person was born (1-12).",
                    "minimum": 1,
                    "maximum": 12
                },
                "xdm:birthYear": {
                    "title": "Birth Year",
                    "type": "integer",
                    "description": "The year a person was born including the century (yyyy, e.g 1983).",
                    "minimum": 1,
                    "maximum": 32767
                },
                "xdm:gender": {
                    "title": "Gender",
                    "type": "string",
                    "description": "Gender identity of the person.\n",
                    "default": "not_specified",
                    "meta:enum": {
                        "not_specified": "Not Specified",
                        "male": "Male",
                        "female": "Female",
                        "non_specific": "Non specific"
                    }
                },
                "xdm:audit": {
                    "title": "Audit",
                    "$ref": "https://ns.adobe.com/xdm/common/audittrail#/definitions/audittrail"
                }
            }
        }
    }
}
{
    "$id": "adobe/experience/campaign/experienceevent-profile-personal-details",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Adobe Campaign ExperienceEvent - Profile Snapshot Personal Details",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "description": "Adobe Campaign ExperienceEvent optional snapshot of Profile personal details.",
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "_experience": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "campaign": {
                    "type": "object",
                    "meta:xdmType": "object",
                    "properties": {
                        "message": {
                            "title": "A single message sent to a recipient.",
                            "type": "object",
                            "meta:xdmType": "object",
                            "properties": {
                                "profileSnapshot": {
                                    "title": "Profile Snapshot",
                                    "description": "Profile snapshot contains the recipient of the message. This property is primarily used to link the message to a Profile using the `IdentityMap` but it can also be used to freeze some properties of the profile at the time the message was sent.",
                                    "type": "object",
                                    "meta:xdmType": "object",
                                    "properties": {
                                        "homeAddress": {
                                            "title": "Home Address",
                                            "$ref": "common/address",
                                            "description": "A home postal address.",
                                            "meta:xdmField": "xdm:homeAddress"
                                        },
                                        "personalEmail": {
                                            "title": "Personal Email",
                                            "$ref": "context/emailaddress",
                                            "description": "A personal email address.",
                                            "meta:xdmField": "xdm:personalEmail"
                                        },
                                        "homePhone": {
                                            "title": "Home Phone",
                                            "$ref": "context/phonenumber",
                                            "description": "Home phone number.",
                                            "meta:xdmField": "xdm:homePhone"
                                        },
                                        "mobilePhone": {
                                            "title": "Mobile Phone",
                                            "$ref": "context/phonenumber",
                                            "description": "Mobile phone number.",
                                            "meta:xdmField": "xdm:mobilePhone"
                                        },
                                        "faxPhone": {
                                            "title": "Fax Phone",
                                            "$ref": "context/phonenumber",
                                            "description": "Fax phone number.",
                                            "meta:xdmField": "xdm:faxPhone"
                                        }
                                    },
                                    "meta:xdmField": "xdm:profileSnapshot"
                                }
                            },
                            "meta:xdmField": "https://ns.adobe.com/experience/campaign/message"
                        }
                    }
                }
            }
        }
    },
    "meta:xdmId": "https://ns.adobe.com/experience/campaign/experienceevent-profile-personal-details",
    "meta:altId": "_experience.campaign.experienceevent-profile-personal-details"
}
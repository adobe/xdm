{
    "$id": "data/viewablemidpoints",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Viewable-midpoints",
    "type": "object",
    "meta:extensible": true,
    "description": "The advertising/viewability metric `viewable-midpoints` describes whether at least 50% of the video's pixels were visible at the midpoint of play.",
    "meta:status": "stabilizing",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:viewableMidpoints",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id"
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "advertising/viewability metric: viewableMidpoints",
                    "description": "The advertising/viewability metric `viewable-midpoints` describes whether at least 50% of the video's pixels were visible at the midpoint of play.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name"
                }
            },
            "required": [
                "name"
            ]
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement"
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/viewablemidpoints",
    "meta:altId": "_xdm.data.viewablemidpoints",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
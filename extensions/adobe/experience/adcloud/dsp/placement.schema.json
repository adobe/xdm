  "$id": "https://ns.adobe.com/xdm/adcloud/dsp/placement",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "DSP Advertising Campaign Placement",
  "type": "object",
  "meta:extensible": false,
  "meta:abstract": false,
  "meta:auditable": true,
  "meta:extends": [
    "https://ns.adobe.com/xdm/data/record"
  ],
  "description": "Adobe Advertising Cloud DSP Campaign Placement Details.",
  "definitions": {
    "dsp-placement": {
      "properties": {
        "dsp:placementKey": {
          "title": "Placement Key",
          "type": "string",
          "description": "Campaign Placement external unique identifier.",
          "meta:titleId": "placement##dsp:placementKey##title",
          "meta:descriptionId": "placement##dsp:placementKey##description"
        },
        "dsp:placementName": {
          "title": "Name",
          "type": "string",
          "description": "Campaign Placement name.",
          "meta:titleId": "placement##dsp:placementName##title",
          "meta:descriptionId": "placement##dsp:placementName##description"
        },
        "dsp:placementType": {
          "title": "Placement Type",
          "type": "string",
          "description": "Budget Type indicates how the allocated budget will be spent",
          "enum": [
            "Direct",
            "Site",
            "Network",
            "Planner",
            "Audit",
            "ParentPlan",
            "ChildPlan",
            "Template",
            "SAS"
          ],
          "meta:enum": {
            "Direct": "Direct",
            "Site": "Site",
            "Network": "Network",
            "Planner": "Planner",
            "Audit": "Audit",
            "ParentPlan": "ParentPlan",
            "ChildPlan": "ChildPlan",
            "Template": "Template",
            "SAS": "SAS "
          },
          "meta:titleId": "placement##dsp:placementType##title",
          "meta:descriptionId": "placement##dsp:placementType##description"
        },
        "dsp:placementStartTime": {
          "title": "Campaign Placement Start Date and Time",
          "type": "string",
          "format": "date-time",
          "description": "The date on which a placement starts showing ads (ms since Jan 1, 1970)",
          "meta:titleId": "placement##dsp:placementStartTime##title",
          "meta:descriptionId": "placement##dsp:placementStartTime##description"
        },
        "dsp:placementEndTime": {
          "title": "Campaign Placement End Date and Time",
          "type": "string",
          "format": "date-time",
          "description": "The date after which a placement stops showing ads (ms since Jan 1, 1970).",
          "meta:titleId": "placement##dsp:placementEndTime##title",
          "meta:descriptionId": "placement##dsp:placementEndTime##description"
        },
        "dsp:placementBudget": {
          "title": "Campaign Placement Budget",
          "type": "integer",
          "description": "Campaign placement budget.",
          "meta:titleId": "placement##dsp:placementBudget##title",
          "meta:descriptionId": "placement##dsp:placementBudget##description"
        },
        "dsp:campaignId": {
          "title": "Campaign Identifier",
          "type": "string",
          "description": "Identifier of the campaign this placement belongs to.",
          "meta:titleId": "placement##dsp:campaignId##title",
          "meta:descriptionId": "placement##dsp:campaignId##description"
        },
        "dsp:packageId": {
          "title": "Package Identifier",
          "type": "string",
          "description": "Identifier of the package the placement belongs to.",
          "meta:titleId": "placement##dsp:packageId##title",
          "meta:descriptionId": "placement##dsp:packageId##description"
        },
        "dsp:siteId": {
          "title": "Site Identifier",
          "type": "string",
          "description": "Identifier of the site where the placement will be shown.",
          "meta:titleId": "placement##dsp:siteId##title",
          "meta:descriptionId": "placement##dsp:siteId##description"
        },
        "dsp:adIds": {
          "title": "Ad Identifiers",
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of identifiers for the ads which are linked to this campaign placement.",
          "meta:titleId": "placement##dsp:adIds##title",
          "meta:descriptionId": "placement##dsp:adIds##description"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/data/record"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/common/auditable"
    },
    {
      "$ref": "#/definitions/dsp-placement"
    }
  ],
  "meta:status": "stable",
  "meta:titleId": "placement##title",
  "meta:descriptionId": "placement##description"
}
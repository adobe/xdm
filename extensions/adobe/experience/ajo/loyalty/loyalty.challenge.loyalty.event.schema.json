  "$id": "https://ns.adobe.com/experience/ajo/loyalty/loyalty-event",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Loyalty Event",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": [
    "https://ns.adobe.com/xdm/context/experienceevent"
  ],
  "description": "Captures loyalty event details including transaction information and item lists.",
  "definitions": {
    "customFields": {
      "properties": {
        "https://ns.adobe.com/experience/ajo/loyalty": {
          "type": "object",
          "properties": {
            "item_list": {
              "title": "Item List",
              "type": "array",
              "description": "List of items in the loyalty event.",
              "items": {
                "type": "object",
                "properties": {
                  "unit_price": {
                    "title": "Unit Price",
                    "type": "number",
                    "description": "Unit price of the item.",
                    "meta:xdmType": "number"
                  },
                  "quantity": {
                    "title": "Quantity",
                    "type": "integer",
                    "description": "Quantity of the item.",
                    "minimum": -2147483648,
                    "maximum": 2147483647,
                    "meta:xdmType": "int"
                  },
                  "item_name": {
                    "title": "Item Name",
                    "type": "string",
                    "description": "Name of the item.",
                    "minLength": 1,
                    "meta:xdmType": "string"
                  },
                  "item_map": {
                    "title": "Item Map",
                    "type": "object",
                    "description": "Additional item attributes as key-value pairs.",
                    "meta:xdmType": "map",
                    "additionalProperties": {
                      "type": "string",
                      "meta:xdmType": "string"
                    }
                  },
                  "item_set": {
                    "title": "Item Set",
                    "type": "array",
                    "description": "Set of item categories or tags.",
                    "uniqueItems": true,
                    "items": {
                      "type": "string",
                      "minLength": 1,
                      "meta:xdmType": "string"
                    },
                    "meta:xdmType": "array"
                  }
                },
                "meta:xdmType": "object"
              },
              "meta:xdmType": "array"
            },
            "location_id": {
              "title": "Location ID",
              "type": "string",
              "description": "Identifier for the location where the event occurred.",
              "minLength": 1,
              "meta:xdmType": "string"
            },
            "transaction_id": {
              "title": "Transaction ID",
              "type": "string",
              "description": "Unique identifier for the transaction.",
              "minLength": 1,
              "meta:xdmType": "string"
            }
          },
          "meta:xdmType": "object"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/customFields"
    }
  ],
  "meta:status": "experimental"
}


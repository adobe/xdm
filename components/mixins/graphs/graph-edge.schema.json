  "$id": "https://ns.adobe.com/xdm/context/graph-edge",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "XDM Graph Edge",
  "type": "object",
  "description": "Information regarding the relationship between two nodes or vertices such as data provider, and edge information.",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": [
    "https://ns.adobe.com/xdm/context/graphs"
  ],
  "definitions": {
    "graph-edge": {
      "properties": {
        "xdm:edges": {
          "title": "Array Of Edges",
          "description": "Array of edges.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "xdm:edgeId": {
                "title": "Edge Identifier",
                "description": "The unique identifier of the identity associated with this graph edge.",
                "type": "string",
                "meta:titleId": "graph-edge##xdm:edgeId##title",
                "meta:descriptionId": "graph-edge##xdm:edgeId##description"
              },
              "xdm:sourceNodeId": {
                "title": "Source Node Id",
                "description": "Source node identifier.",
                "type": "string",
                "meta:titleId": "graph-edge##xdm:sourceNodeId##title",
                "meta:descriptionId": "graph-edge##xdm:sourceNodeId##description"
              },
              "xdm:targetNodeId": {
                "title": "Target Node Id",
                "description": "Target node identifier.",
                "type": "string",
                "meta:titleId": "graph-edge##xdm:targetNodeId##title",
                "meta:descriptionId": "graph-edge##xdm:targetNodeId##description"
              },
              "xdm:relation": {
                "title": "Relation Description",
                "description": "Relation description.",
                "type": "string",
                "meta:titleId": "graph-edge##xdm:relation##title",
                "meta:descriptionId": "graph-edge##xdm:relation##description"
              },
              "xdm:label": {
                "title": "Label",
                "description": "Additional description.",
                "type": "string",
                "meta:titleId": "graph-edge##xdm:label##title",
                "meta:descriptionId": "graph-edge##xdm:label##description"
              },
              "xdm:dataProvider": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "xdm:dataProviderId": {
                      "title": "Data Provider Id",
                      "description": "Identifier of the Data Provider..",
                      "type": "integer",
                      "meta:titleId": "graph-edge##xdm:dataProviderId##title",
                      "meta:descriptionId": "graph-edge##xdm:dataProviderId##description"
                    },
                    "xdm:firstSeenTimestamp": {
                      "title": "Relationship Observed Time and Date",
                      "description": "Time and date the relation was first observed.",
                      "type": "string",
                      "format": "date-time",
                      "meta:titleId": "graph-edge##xdm:firstSeenTimestamp##title",
                      "meta:descriptionId": "graph-edge##xdm:firstSeenTimestamp##description"
                    },
                    "xdm:lastSeenTimestamp": {
                      "title": "Relationship Observed most recent Time and Date",
                      "description": "Time and date the relation was last observed.",
                      "type": "string",
                      "format": "date-time",
                      "meta:titleId": "graph-edge##xdm:lastSeenTimestamp##title",
                      "meta:descriptionId": "graph-edge##xdm:lastSeenTimestamp##description"
                    },
                    "xdm:trusted": {
                      "title": "Trusted Data Source Flag",
                      "description": "Indicator of whether the data source is trusted or not.",
                      "type": "boolean",
                      "default": true,
                      "meta:titleId": "graph-edge##xdm:trusted##title",
                      "meta:descriptionId": "graph-edge##xdm:trusted##description"
                    },
                    "xdm:directed": {
                      "title": "Directed Or Birectional",
                      "description": "Nature of graph whether it is directed or birectional.",
                      "type": "boolean",
                      "default": false,
                      "meta:titleId": "graph-edge##xdm:directed##title",
                      "meta:descriptionId": "graph-edge##xdm:directed##description"
                    },
                    "xdm:relationType": {
                      "title": "Relationship Type",
                      "description": "The method that established the relationship - Online/Offline deterministic/probabilistic.",
                      "type": "string",
                      "enum": [
                        "online_deterministic",
                        "online_probabilistic",
                        "offline_deterministic",
                        "offline_probabilistic"
                      ],
                      "meta:enum": {
                        "online_deterministic": "Online Deterministic",
                        "online_probabilistic": "Online Probabilistic",
                        "offline_deterministic": "Offline Deterministic",
                        "offline_probabilistic": "Offline Probabilistic"
                      },
                      "meta:titleId": "graph-edge##xdm:relationType##title",
                      "meta:descriptionId": "graph-edge##xdm:relationType##description"
                    },
                    "xdm:frequency": {
                      "title": "Frequency",
                      "description": "Frequency of the observed relationship.",
                      "type": "integer",
                      "meta:titleId": "graph-edge##xdm:frequency##title",
                      "meta:descriptionId": "graph-edge##xdm:frequency##description"
                    },
                    "xdm:score": {
                      "title": "Relationship Score",
                      "description": "Imputed score of relationship.",
                      "type": "number",
                      "meta:titleId": "graph-edge##xdm:score##title",
                      "meta:descriptionId": "graph-edge##xdm:score##description"
                    },
                    "xdm:summedRecency": {
                      "title": "Recency Score",
                      "description": "Recency score of relationship.",
                      "type": "integer",
                      "meta:titleId": "graph-edge##xdm:summedRecency##title",
                      "meta:descriptionId": "graph-edge##xdm:summedRecency##description"
                    },
                    "xdm:lastCalculatedTimestamp": {
                      "title": "Last Calculated Data And Time",
                      "description": "Time and date the relationship score was last calculated.",
                      "type": "string",
                      "format": "date-time",
                      "meta:titleId": "graph-edge##xdm:lastCalculatedTimestamp##title",
                      "meta:descriptionId": "graph-edge##xdm:lastCalculatedTimestamp##description"
                    }
                  }
                }
              }
            }
          },
          "meta:titleId": "graph-edge##xdm:edges##title",
          "meta:descriptionId": "graph-edge##xdm:edges##description"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"
    },
    {
      "$ref": "#/definitions/graph-edge"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/common/auditable"
    }
  ],
  "meta:status": "stable",
  "meta:createdDate": "2020-08-10",
  "meta:titleId": "graph-edge##title",
  "meta:descriptionId": "graph-edge##description"
}
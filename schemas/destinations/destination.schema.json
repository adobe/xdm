  "definitions": {
    "destination": {
      "properties": {
        "xdm:destinationID": {
          "title": "Destination ID",
          "type": "string",
          "description": "Unique Identifier for a destination instance",
          "meta:titleId": "destination##xdm:destinationID##title",
          "meta:descriptionId": "destination##xdm:destinationID##description"
        },
        "xdm:destinationName": {
          "title": "Destination Name",
          "type": "string",
          "description": "Destination flow name",
          "meta:titleId": "destination##xdm:destinationName##title",
          "meta:descriptionId": "destination##xdm:destinationName##description"
        },
        "xdm:destinationPlatform": {
          "title": "Destination Platform",
          "type": "string",
          "description": "The destination platform selected for activation flow.",
          "meta:titleId": "destination##xdm:destinationPlatform##title",
          "meta:descriptionId": "destination##xdm:destinationPlatform##description"
        },
        "xdm:createTime": {
          "title": "Create Time",
          "type": "string",
          "format": "date-time",
          "description": "The date and UTC time when the activation flow to the destination was createdByID",
          "meta:titleId": "destination##xdm:createTime##title",
          "meta:descriptionId": "destination##xdm:createTime##description"
        },
        "xdm:createdByID": {
          "title": "Created User ID",
          "type": "string",
          "description": "ID of user who created the destination flow",
          "meta:titleId": "destination##xdm:createdByID##title",
          "meta:descriptionId": "destination##xdm:createdByID##description"
        },
        "xdm:destinationDescription": {
          "title": "Destination Description",
          "type": "string",
          "description": "Destination flow description",

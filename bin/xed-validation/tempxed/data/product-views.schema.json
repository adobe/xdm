{
    "$id": "data/metrics/product-views",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Product Views",
    "type": "object",
    "meta:extensible": true,
    "description": "The commerce metric `productViews` describes the number of product views that have occurred. Because the number of products on a page might be greater than one, this number may differ from the page view count of product pages.",
    "meta:status": [
        "experimental",
        "stabilizing"
    ],
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:productViews",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id"
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "commerce metric: productViews",
                    "description": "The human-readable name of the metric. The name can be used in user interfaces and does not have to be unique.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name"
                }
            },
            "required": [
                "name"
            ]
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement"
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/metrics/product-views",
    "meta:altId": "_xdm.data.metrics.product-views",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
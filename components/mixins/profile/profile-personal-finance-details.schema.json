  "$id": "https://ns.adobe.com/xdm/mixins/profile-personal-finance-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Personal Finance Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": ["financial_services"]
  },
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "description": "Personal finance details such as financial account details, credit score, and tax bracket.",
  "definitions": {
    "personal-finance-details": {
      "properties": {
        "xdm:personalFinances": {
          "type": "object",
          "description": "Financial details including transactions, accounts, and applications.",
          "properties": {
            "xdm:accountCardsTotal": {
              "title": "Account Cards Total",
              "type": "integer",
              "description": "Total number of account (financial) cards assigned to a user.",
              "meta:titleId": "profile-personal-finance-details##xdm:accountCardsTotal##title",
              "meta:descriptionId": "profile-personal-finance-details##xdm:accountCardsTotal##description"
            },
            "xdm:assignedBeneficiary": {
              "title": "Assigned Beneficiaries",
              "type": "array",
              "items": {
                "$ref": "https://ns.adobe.com/xdm/context/profile-person-details"
              },
              "description": "Captures the beneficiary(s) assigned to the account.",
              "meta:titleId": "profile-personal-finance-details##xdm:assignedBeneficiary##title",
              "meta:descriptionId": "profile-personal-finance-details##xdm:assignedBeneficiary##description"
            },
            "xdm:creditScores": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "xdm:score": {
                    "title": "Score",
                    "type": "integer",
                    "description": "Refers to a number between 300-850 that depicts a consumer's creditworthiness.",
                    "meta:titleId": "profile-personal-finance-details##xdm:score##title",
                    "meta:descriptionId": "profile-personal-finance-details##xdm:score##description"
                  },
                  "xdm:provider": {
                    "title": "Credit Bureau",
                    "type": "string",
                    "meta:enum": {
                      "experian": "Experian",
                      "equifax": "Equifax",
                      "transunion": "TransUnion"
                    },
                    "description": "Refers to the credit bureau responsible for providing the credit score.",
                    "meta:titleId": "profile-personal-finance-details##xdm:provider##title",
                    "meta:descriptionId": "profile-personal-finance-details##xdm:provider##description"
                  },
                  "xdm:scoreDate": {
                    "title": "Score Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Date when the score was reported.",
                    "meta:titleId": "profile-personal-finance-details##xdm:scoreDate##title",
                    "meta:descriptionId": "profile-personal-finance-details##xdm:scoreDate##description"
                  }
                }
              }
            },
            "xdm:employmentStatus": {
              "title": "Employment Status",
              "type": "string",
              "meta:enum": {
                "fullTime": "Full Time",
                "partTime": "Part Time",
                "temporary": "Temporary",
                "selfEmployed": "Self-Employed",
                "retired": "Retired",
                "unemployed": "Unemployed"
              },
              "description": "Tracks the employment status of the user.",
              "meta:titleId": "profile-personal-finance-details##xdm:employmentStatus##title",
              "meta:descriptionId": "profile-personal-finance-details##xdm:employmentStatus##description"
            },
            "xdm:ID": {
              "title": "ID",
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of financial account IDs assigned to the user.",
              "meta:titleId": "profile-personal-finance-details##xdm:ID##title",
              "meta:descriptionId": "profile-personal-finance-details##xdm:ID##description"
            },
            "xdm:hasAssignedBeneficiary": {
              "title": "Has Assigned Beneficiary",
              "type": "boolean",
              "description": "Flag determining if the account has a beneficiary assigned.",
              "meta:titleId": "profile-personal-finance-details##xdm:hasAssignedBeneficiary##title",
              "meta:descriptionId": "profile-personal-finance-details##xdm:hasAssignedBeneficiary##description"
            }
          },
          "meta:descriptionId": "profile-personal-finance-details##xdm:personalFinances##description"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/personal-finance-details"
    }
  ],
  "meta:status": "stable",
  "meta:createdDate": "2021-03-23",
  "meta:titleId": "profile-personal-finance-details##title",
  "meta:descriptionId": "profile-personal-finance-details##description"
}

  "$id": "https://ns.adobe.com/xdm/context/identity-graph-flattened-export",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Identity Graph Flattened Export Schema",
  "type": "object",
  "meta:extensible": false,
  "meta:abstract": false,
  "meta:extends": ["https://ns.adobe.com/xdm/data/record"],
  "description": "Identity Graph Flattened Export Schema.",
  "definitions": {
    "identity-graph-flattened-export": {
      "properties": {
        "xdm:identityID": {
          "title": "Person ID",
          "type": "string",
          "description": "Person ID Like Email or ECID or phone.",
          "meta:titleId": "identity-graph-flattened-export##xdm:identityID##title",
          "meta:descriptionId": "identity-graph-flattened-export##xdm:identityID##description"
        },
        "xdm:namespaceID": {
          "title": "Namespace Id",
          "type": "integer",
          "description": "Id for the Identity Type.",
          "meta:titleId": "identity-graph-flattened-export##xdm:namespaceID##title",
          "meta:descriptionId": "identity-graph-flattened-export##xdm:namespaceID##description"
        },
        "xdm:namespaceCode": {
          "title": "Namespace Code",
          "type": "string",
          "description": "Identity Type in human readable form.",
          "meta:titleId": "identity-graph-flattened-export##xdm:namespaceCode##title",
          "meta:descriptionId": "identity-graph-flattened-export##xdm:namespaceCode##description"
        },
        "xdm:algorithm": {
          "title": "Algorithm",
          "type": "string",
          "description": "Algorithm used by Identity Service to stitch like SHARED_DEVICE_DETECTION_SESSIONIZATION, DETERMINISTIC, FREQ_RECENCY etc.",
          "enum": [
            "SHARED_DEVICE_DETECTION_SESSIONIZATION",
            "FREQ_RECENCY_BASED_SHARED_DEVICES",
            "DETERMINISTIC"
          ],
          "meta:enum": {
            "SHARED_DEVICE_DETECTION_SESSIONIZATION": "Shared Device Detection Sessionization",
            "FREQ_RECENCY_BASED_SHARED_DEVICES": "Frequency Recency Based Shared Devices",
            "DETERMINISTIC": "Deterministic"
          },
          "meta:titleId": "identity-graph-flattened-export##xdm:algorithm##title",
          "meta:descriptionId": "identity-graph-flattened-export##xdm:algorithm##description"
        },
        "xdm:membersByTimeRange": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "xdm:startTimestamp": {
                "title": "Start Timestamp",
                "type": "string",
                "format": "date-time",
                "description": "Start Timestamp.",
                "meta:titleId": "identity-graph-flattened-export##xdm:startTimestamp##title",
                "meta:descriptionId": "identity-graph-flattened-export##xdm:startTimestamp##description"
              },
              "xdm:endTimestamp": {
                "title": "End Timestamp",
                "type": "string",
                "format": "date-time",
                "description": "End Timestamp.",
                "meta:titleId": "identity-graph-flattened-export##xdm:endTimestamp##title",
                "meta:descriptionId": "identity-graph-flattened-export##xdm:endTimestamp##description"
              },
              "xdm:graphID": {
                "title": "Person Graph ID",
                "type": "string",
                "description": "Person level Graph Identifier.",
                "meta:titleId": "identity-graph-flattened-export##xdm:graphID##title",
                "meta:descriptionId": "identity-graph-flattened-export##xdm:graphID##description"
              },
              "xdm:identityMap": {
                "type": "object",
                "meta:xdmType": "map",
                "additionalProperties": {
                  "type": "array",
                  "items": {
                    "$ref": "https://ns.adobe.com/xdm/context/identityitem"
                  }
                }
              }
            }
          }
        },
        "xdm:lastUpdatedTime": {
          "title": "Last Updated Time",
          "type": "string",
          "format": "date-time",
          "description": "Last updated time when this identity was updated.",
          "meta:titleId": "identity-graph-flattened-export##xdm:lastUpdatedTime##title",
          "meta:descriptionId": "identity-graph-flattened-export##xdm:lastUpdatedTime##description"
        }
      },
      "required": ["xdm:identityID", "xdm:namespaceCode", "xdm:algorithm"]
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/data/record"
    },
    {
      "$ref": "#/definitions/identity-graph-flattened-export"
    }
  ],
  "meta:status": "stable",
  "meta:titleId": "identity-graph-flattened-export##title",
  "meta:descriptionId": "identity-graph-flattened-export##description"
}

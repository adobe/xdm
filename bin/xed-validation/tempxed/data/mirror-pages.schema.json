{
    "$id": "data/metrics/direct-marketing/mirror-pages",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Mirror Pages",
    "type": "object",
    "meta:extensible": true,
    "description": "The direct-marketing metric `mirror-page`s describes the number of mirror pages for which a link to the online mirror page of a message has been clicked.",
    "meta:status": "stabilizing",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:mirrorPages",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id"
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "direct-marketing metric: mirrorPages",
                    "description": "The human-readable name of the metric. The name can be used in user interfaces and does not have to be unique.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name"
                }
            },
            "required": [
                "name"
            ]
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement"
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/metrics/direct-marketing/mirror-pages",
    "meta:altId": "_xdm.data.metrics.direct-marketing.mirror-pages",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
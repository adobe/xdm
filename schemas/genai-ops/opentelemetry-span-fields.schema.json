  "$id": "https://ns.adobe.com/xdm/mixins/opentelemetry-span-fields",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Open Telemetry Specific Span Fields",
  "type": "object",
  "auditable": true,
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": [
    "https://ns.adobe.com/xdm/classes/aep-ai-agent-trace"
  ],
  "description": "Captures fields related to Open Telemetry Span.",
  "definitions": {
    "opentelemetry-span-fields": {
      "properties": {
        "xdm:opentelemetrySpan": {
          "type": "object",
          "properties": {
            "xdm:trace_id": {
              "type": "string",
              "description": "The ID of the trace."
            },
            "xdm:span_id": {
              "type": "string",
              "description": "The ID of the span."
            },
            "xdm:parent_span_id": {
              "type": "string",
              "description": "The ID of the parent span."
            },
            "xdm:name": {
              "type": "string",
              "description": "The name of the span."
            },
            "xdm:kind": {
              "type": "string",
              "description": "The kind of the span."
            },
            "xdm:start_time_unix_nano": {
              "type": "number",
              "description": "The start time of the span."
            },
            "xdm:end_time_unix_nano": {
              "type": "number",
              "description": "The end time of the span."
            },
            "xdm:status": {
              "type": "object",
              "description": "The status of the span.",
              "properties": {
                "xdm:code": {
                  "type": "string",
                  "description": "The code of the status."
                }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [{ "$ref": "#/definitions/opentelemetry-span-fields" }],
  "meta:status": "experimental"
}

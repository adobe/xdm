{
    "$id": "data/metrics/checkouts.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Checkouts",
    "type": "object",
    "meta:extensible": true,
    "description": "Number of actions during a checkout process of a product list, there can be more than one checkout event if there are multiple steps in a checkout process. If there are multiple steps the event time information and referenced page or experience is used to identify the step individual events represent in order.",
    "meta:status": [
        "experimental",
        "stabilizing"
    ],
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:checkouts",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "commerce metric: checkouts",
                    "description": "The human-readable name of the metric. The name can be used in user interfaces and does not have to be unique.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name",
                    "tagNumber": 1
                }
            },
            "required": [
                "name"
            ],
            "tagNumber": 2
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement",
            "tagNumber": 3
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit",
            "tagNumber": 4
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/metrics/checkouts",
    "meta:altId": "_xdm.data.metrics.checkouts",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
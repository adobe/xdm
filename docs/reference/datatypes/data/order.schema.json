    "$id": "https://ns.adobe.com/xdm/data/order",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Order",
    "type": "object",
    "description": "The order placed for a product list.",
    "definitions": {
        "order": {
            "properties": {
                "xdm:purchaseID": {
                    "title": "Purchase ID",
                    "type": "string",
                    "description": "Unique identifier assigned by the seller for this purchase or contract. There is no guarantee that the ID is unique.",
                    "meta:titleId": "order##xdm:purchaseID##title##84151",
                    "meta:descriptionId": "order##xdm:purchaseID##description##77201"
                },
                "xdm:purchaseOrderNumber": {
                    "title": "Purchase Order Number",
                    "type": "string",
                    "description": "Unique identifier assigned by the purchaser for this purchase or contract.",
                    "meta:titleId": "order##xdm:purchaseOrderNumber##title##10541",
                    "meta:descriptionId": "order##xdm:purchaseOrderNumber##description##44981"
                },
                "xdm:payments": {
                    "title": "Payment List",
                    "type": "array",
                    "description": "The list of payments for this order.",
                    "items": {
                        "$ref": "https://ns.adobe.com/xdm/data/paymentitem"
                    },
                    "meta:titleId": "order##xdm:payments##title##87721",
                    "meta:descriptionId": "order##xdm:payments##description##70201"
                },
                "xdm:currencyCode": {
                    "title": "Currency",
                    "type": "string",
                    "examples": [
                        "USD",
                        "EUR"
                    ],
                    "pattern": "^[A-Z]{3}$",
                    "description": "The ISO 4217 currency code used for the order totals.",
                    "meta:titleId": "order##xdm:currencyCode##title##44601",
                    "meta:descriptionId": "order##xdm:currencyCode##description##11951"
                },
                "xdm:priceTotal": {
                    "title": "Price Total",
                    "type": "number",
                    "description": "The total price of this order after all discounts and taxes have been applied.",
                    "meta:titleId": "order##xdm:priceTotal##title##18711",
                    "meta:descriptionId": "order##xdm:priceTotal##description##87481"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/order"
        }
    ],
    "meta:status": "stable",
    "meta:createdDate": "2020-08-10",
    "meta:titleId": "order##title##66121",
    "meta:descriptionId": "order##description##96641",
    "examples": [
        {
            "xdm:purchaseID": "a8g784hjq1mnp3",
            "xdm:purchaseOrderNumber": "123456",
            "xdm:payments": [
                {
                    "xdm:transactionID": "transactid-a111",
                    "xdm:paymentAmount": 899.99,
                    "xdm:paymentType": "credit_card",
                    "xdm:currencyCode": "USD"
                },
                {
                    "xdm:transactionID": "transactid-a222",
                    "xdm:paymentAmount": 99.99,
                    "xdm:paymentType": "gift_card",
                    "xdm:currencyCode": "USD"
                }
            ],
            "xdm:currencyCode": "USD",
            "xdm:priceTotal": 999.98
        }
    ]
}
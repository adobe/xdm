  "$id": "https://ns.adobe.com/xdm/mixins/profile/profile-loyalty-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Loyalty Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "retail",
      "travel_and_hospitality",
      "automotive",
      "health_and_life_sciences",
      "high_tech",
      "manufacturing"
    ]
  },
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "description": "Loyalty details such as ID, points, join date, program, and status. ",
  "definitions": {
    "loyalty-details": {
      "properties": {
        "xdm:loyalty": {
          "type": "object",
          "description": "Captures details related to the customer's loyalty rewards.",
          "properties": {
            "xdm:joinDate": {
              "title": "Program Join Date",
              "type": "string",
              "format": "date-time",
              "description": "Date which the visitor registered for the loyalty program.",
              "meta:titleId": "profile-loyalty-details##xdm:joinDate##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:joinDate##description"
            },
            "xdm:loyaltyID": {
              "title": "Program ID",
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "The loyalty program ID(s) associated with a specific user, if they are enrolled in the client's loyalty program.",
              "meta:titleId": "profile-loyalty-details##xdm:loyaltyID##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:loyaltyID##description"
            },
            "xdm:points": {
              "title": "Program Points Balance",
              "type": "number",
              "description": "Current balance of the loyalty points/awards in a visitor's loyalty account.",
              "meta:titleId": "profile-loyalty-details##xdm:points##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:points##description"
            },
            "xdm:pointsExpiration": {
              "title": "Points Expiration",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "xdm:pointsExpiring": {
                    "title": "Points Expiring",
                    "type": "number",
                    "description": "Point balance expiring as of the associated expiration date.",
                    "meta:titleId": "profile-loyalty-details##xdm:pointsExpiring##title",
                    "meta:descriptionId": "profile-loyalty-details##xdm:pointsExpiring##description"
                  },
                  "xdm:pointsExpirationDate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Date on which the given portion of the loyalty points expire.",
                    "meta:descriptionId": "profile-loyalty-details##xdm:pointsExpirationDate##description"
                  }
                }
              },
              "meta:titleId": "profile-loyalty-details##xdm:pointsExpiration##title"
            },
            "xdm:pointsRedeemed": {
              "title": "Points Redeemed",
              "type": "number",
              "description": "Amount of points applied toward a purchase or otherwise redeemed.",
              "meta:titleId": "profile-loyalty-details##xdm:pointsRedeemed##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:pointsRedeemed##description"
            },
            "xdm:program": {
              "title": "Program Name",
              "type": "string",
              "description": "This should define the loyalty progam in which a visitor is enrolled.",
              "meta:titleId": "profile-loyalty-details##xdm:program##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:program##description"
            },
            "xdm:upgradeDate": {
              "title": "Program Name",
              "type": "string",
              "description": "Date which the customer was upgraded to the next tier level.",
              "meta:titleId": "profile-loyalty-details##xdm:upgradeDate##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:upgradeDate##description"
            },
            "xdm:status": {
              "title": "Status",
              "type": "string",
              "description": "Captures the visitor's loyalty progam status, such as active, disabled, or suspended.",
              "meta:titleId": "profile-loyalty-details##xdm:status##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:status##description"
            },
            "xdm:tier": {
              "title": "Tier",
              "type": "string",
              "description": "Captures the loyalty progam tier in which a visitor is enrolled.",
              "meta:titleId": "profile-loyalty-details##xdm:tier##title",
              "meta:descriptionId": "profile-loyalty-details##xdm:tier##description"
            }
          },
          "meta:descriptionId": "profile-loyalty-details##xdm:loyalty##description"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/loyalty-details"
    }
  ],
  "meta:status": "stable",
  "meta:createdDate": "2021-02-19",
  "meta:titleId": "profile-loyalty-details##title",
  "meta:descriptionId": "profile-loyalty-details##description"
}

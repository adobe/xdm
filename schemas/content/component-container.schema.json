  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://ns.adobe.com/xdm/content/component-container",
  "type": "object",
  "title": "Component container",
  "meta:extensible": true,
  "description": "",
  "definitions": {
    "container": {
      "properties": {
        "@type": {
          "type": "string",
          "format": "uri",
          "description":
            "Type of the container, acts as processing hint for the client."
        },
        "xdm:items": {
          "type": "object",
          "description": "The items of this container.",
          "anyOf": [
            {
              "$ref": "#/definitions/container"
            },
            {
              "$ref":
                "https://ns.adobe.com/xdm/content/page-component#/definitions/component"
            }
          ]
        },
        "xdm:itemsOrder": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          },
          "description":
            "Defines the order of the items in the container. Can be omitted if the order is not important."
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/container"
    }
  ],
  "required": ["@type", "xdm:items"],
  "meta:status": "experimental"
}

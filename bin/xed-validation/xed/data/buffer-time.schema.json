{
    "$id": "data/buffer-time.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Buffer Time",
    "type": "object",
    "meta:extensible": true,
    "description": "Describes the total amount of time spent buffering.",
    "meta:status": "stabilizing",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:bufferTime",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "metric: bufferTime",
                    "description": "Describes the total amount of time spent buffering.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name",
                    "tagNumber": 1
                }
            },
            "required": [
                "name"
            ],
            "tagNumber": 2
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "time",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement",
            "tagNumber": 3
        },
        "unit": {
            "const": "second",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit",
            "tagNumber": 4
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/buffer-time",
    "meta:altId": "_xdm.data.buffer-time",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
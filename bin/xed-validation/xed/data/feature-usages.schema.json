{
    "$id": "data/feature-usages.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Feature Usages",
    "type": "object",
    "meta:extensible": true,
    "description": "Activation(s) of an application feature that is being measured.",
    "meta:status": "stabilizing",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:featureUsages",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "application metric: featureUsages",
                    "description": "The human-readable name of the metric. The name can be used in user interfaces and does not have to be unique.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name",
                    "tagNumber": 1
                }
            },
            "required": [
                "name"
            ],
            "tagNumber": 2
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement",
            "tagNumber": 3
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit",
            "tagNumber": 4
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/feature-usages",
    "meta:altId": "_xdm.data.feature-usages",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
  "$id": "https://ns.adobe.com/xdm/adcloud/dsp/site",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "DSP Advertising Placement Site",
  "type": "object",
  "meta:extensible": false,
  "meta:abstract": false,
  "meta:auditable": true,
  "meta:extends": [
    "https://ns.adobe.com/xdm/data/record"
  ],
  "description": "Adobe Advertising Cloud DSP Placement Site Details.",
  "definitions": {
    "dsp-site": {
      "properties": {
        "dsp:siteKey": {
          "title": "Site Key",
          "type": "string",
          "description": "Placement site external unique identifier.",
          "meta:titleId": "site##dsp:siteKey##title",
          "meta:descriptionId": "site##dsp:siteKey##description"
        },
        "dsp:siteName": {
          "title": "Site Name",
          "type": "string",
          "description": "Placement site name.",
          "meta:titleId": "site##dsp:siteName##title",
          "meta:descriptionId": "site##dsp:siteName##description"
        },
        "dsp:siteUrl": {
          "title": "Site Url",
          "type": "string",
          "description": "Placement site url.",
          "meta:titleId": "site##dsp:siteUrl##title",
          "meta:descriptionId": "site##dsp:siteUrl##description"
        },
        "dsp:siteType": {
          "title": "Site Type",
          "type": "string",
          "description": "The type of the placement site.",
          "enum": [
            "Site",
            "Network"
          ],
          "meta:enum": {
            "Site": "Site",
            "Network": "Network"
          },
          "meta:titleId": "site##dsp:siteType##title",
          "meta:descriptionId": "site##dsp:siteType##description"
        },
        "dsp:siteStatus": {
          "title": "Site Status",
          "type": "string",
          "description": "The status of the placement site.",
          "enum": [
            "Active",
            "Inactive",
            "Deleted"
          ],
          "meta:enum": {
            "Active": "Active",
            "Inactive": "Inactive",
            "Deleted": "Deleted"
          },
          "meta:titleId": "site##dsp:siteStatus##title",
          "meta:descriptionId": "site##dsp:siteStatus##description"
        },
        "dsp:siteDataSource": {
          "title": "Site Data Source",
          "type": "string",
          "description": "The data source for this placement site.",
          "enum": [
            "Trialpay",
            "Nielsen",
            "Quancast"
          ],
          "meta:enum": {
            "Trialpay": "trialpay",
            "Nielsen": "nielsen",
            "Quancast": "quancast"
          },
          "meta:titleId": "site##dsp:siteDataSource##title",
          "meta:descriptionId": "site##dsp:siteDataSource##description"
        },
        "dsp:mobileWeb": {
          "title": "Mobile Web",
          "type": "boolean",
          "description": "Flag stating whether this placement site is a mobile website.",
          "meta:titleId": "site##dsp:mobileWeb##title",
          "meta:descriptionId": "site##dsp:mobileWeb##description"
        },
        "dsp:mobileApp": {
          "title": "Mobile Application",
          "type": "boolean",
          "description": "Flag stating whether this placement site is a mobile application.",
          "meta:titleId": "site##dsp:mobileApp##title",
          "meta:descriptionId": "site##dsp:mobileApp##description"
        },
        "dsp:isTargetable": {
          "title": "Is Targetable",
          "type": "boolean",
          "description": "Flag stating whether this placement site can be targeted.",
          "meta:titleId": "site##dsp:isTargetable##title",
          "meta:descriptionId": "site##dsp:isTargetable##description"
        }
      }
    }

    "$id": "https://ns.adobe.com/xdm/common/organization",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Organization",
    "type": "object",
    "description": "Examples of organization data are number of employees, market segment, industry, and location.",
    "definitions": {
        "organization": {
            "properties": {
                "@id": {
                    "title": "Organization ID",
                    "type": "string",
                    "format": "uri-reference",
                    "description": "A unique identifier for the organization.",
                    "meta:titleId": "organization##@id##title##82641",
                    "meta:descriptionId": "organization##@id##description##27141"
                },
                "xdm:legalName": {
                    "title": "Organization legal name",
                    "type": "string",
                    "description": "The official or legal name of the organization.",
                    "meta:titleId": "organization##xdm:legalName##title##59161",
                    "meta:descriptionId": "organization##xdm:legalName##description##51821"
                },
                "schema:description": {
                    "title": "Organization description",
                    "type": "string",
                    "description": "A description of the organization.",
                    "meta:titleId": "organization##schema:description##title##1101",
                    "meta:descriptionId": "organization##schema:description##description##25421"
                },
                "schema:numberOfEmployees": {
                    "title": "Number of employees",
                    "type": "number",
                    "description": "The number of employees the at the organization.",
                    "meta:titleId": "organization##schema:numberOfEmployees##title##77811",
                    "meta:descriptionId": "organization##schema:numberOfEmployees##description##53301"
                },
                "xdm:annualRevenue": {
                    "title": "Annual Revenue",
                    "description": "Estimated amount of annual revenue of the organization.",
                    "type": "number",
                    "meta:titleId": "organization##xdm:annualRevenue##title##19471",
                    "meta:descriptionId": "organization##xdm:annualRevenue##description##95751"
                },
                "xdm:industry": {
                    "title": "Industry",
                    "type": "string",
                    "description": "The industry that this organization is a part of. This is a free-form field, and it is advisable to use a structured value for queries or to use the `xdm:classifier` property.",
                    "meta:titleId": "organization##xdm:industry##title##28731",
                    "meta:descriptionId": "organization##xdm:industry##description##61371"
                },
                "xdm:website": {
                    "title": "Website URL",
                    "type": "string",
                    "format": "uri",
                    "description": "The URL of the organization's website.",
                    "meta:titleId": "organization##xdm:website##title##33141",
                    "meta:descriptionId": "organization##xdm:website##description##9501"
                },
                "xdm:marketSegment": {
                    "title": "Market segment",
                    "type": "string",
                    "description": "The named market segment that the organization participates in. This is a free-form field, and it is advisable to use a structured value for queries or to use the `xdm:identifier` property.",
                    "meta:titleId": "organization##xdm:marketSegment##title##11291",
                    "meta:descriptionId": "organization##xdm:marketSegment##description##10131"
                },
                "xdm:location": {
                    "title": "Location",
                    "$ref": "https://ns.adobe.com/xdm/context/place",
                    "description": "The location of the organization's main office or headquarters.",
                    "meta:titleId": "organization##xdm:location##title##39421",
                    "meta:descriptionId": "organization##xdm:location##description##16331"
                },
                "xdm:rating": {
                    "title": "Rating",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "The calculated score or star rating for this organization. `1` indicates the maximum possible rating, `0` the minimum possible rating.",
                    "meta:titleId": "organization##xdm:rating##title##45731",
                    "meta:descriptionId": "organization##xdm:rating##description##82101"
                },
                "xdm:identifier": {
                    "title": "Organization identifier",
                    "type": "object",
                    "description": "This object contains unambiguous identifiers for the organization. Each key is the URI of an identification service, each value is the unique ID or preferably URI of the organization as defined by the identification service.",
                    "meta:xdmType": "map",
                    "additionalProperties": {
                        "title": "Organization identifier",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "meta:titleId": "organization##additionalProperties##title##45631"
                    },
                    "meta:titleId": "organization##xdm:identifier##title##48641",
                    "meta:descriptionId": "organization##xdm:identifier##description##59811"
                },
                "xdm:classifier": {
                    "title": "Market or industry classifier",
                    "type": "object",
                    "description": "This object contains unambiguous classifiers for the organization. Each key is the URI of an classification service or standard, each value is the unique ID or preferably URI of the organization as defined by the classification service.",
                    "meta:xdmType": "map",
                    "additionalProperties": {
                        "title": "Market or industry classifier",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "meta:titleId": "organization##additionalProperties##title##58571"
                    },
                    "meta:titleId": "organization##xdm:classifier##title##36961",
                    "meta:descriptionId": "organization##xdm:classifier##description##35561"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/organization"
        }
    ],
    "meta:status": "experimental",
    "meta:createdDate": "2021-02-19",
    "meta:titleId": "organization##title##25261",
    "meta:descriptionId": "organization##description##7521",
    "examples": [
        {
            "@id": "https://data.adobe.io/entities/org/orgid111",
            "xdm:legalName": "ABC Stores",
            "xdm:numberOfEmployees": 200,
            "xdm:annualRevenue": 1000000,
            "xdm:industry": "Retail",
            "xdm:website": "http://www.abcstores.com",
            "rating": 1,
            "xdm:marketSegment": "apparel for kids",
            "xdm:location": {
                "@id": "https://data.adobe.io/entities/places/locid123",
                "schema:description": "ABC Store location",
                "xdm:address": {
                    "@id": "https://data.adobe.io/entities/address/123",
                    "xdm:primary": true,
                    "xdm:type": "work",
                    "xdm:street1": "100 Lincoln Ave",
                    "xdm:city": "San Jose",
                    "xdm:stateProvince": "US-CA",
                    "xdm:postalCode": "95125",
                    "xdm:country": "United States",
                    "xdm:countryCode": "US",
                    "schema:latitude": 37.3382,
                    "schema:longitude": -121.8863,
                    "xdm:status": "active",
                    "xdm:lastVerifiedDate": "2018-01-03"
                },
                "schema:telephone": "1-408-800-0000",
                "xdm:identifier": {
                    "identifiers": [
                        {
                            "https://ns.adobe.com/xdm/external/dnb": "1234"
                        },
                        {
                            "https://ns.adobe.com/xdm/external/angellist": "https://angel.co/adobe"
                        }
                    ]
                },
                "xdm:classifier": {
                    "classifiers": [
                        {
                            "https://ns.adobe.com/xdm/external/sic": "1234"
                        },
                        {
                            "https://ns.adobe.com/xdm/external/naics": "1234"
                        }
                    ]
                }
            }
        }
    ]
}
  "$id": "https://ns.adobe.com/xdm/common/descriptors/removeMetaEnumvalues",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Remove MetaEnum Values Descriptor",
  "meta:extensible": false,
  "meta:extends": [
    "https://ns.adobe.com/xdm/common/descriptors/schemadescriptor#/definitions/descriptor"
  ],
  "meta:abstract": false,
  "type": "object",
  "description": "Allows to remove values from meta:enum.",
  "definitions": {
    "removeMetaEnum": {
      "properties": {
        "@type": {
          "title": "Type",
          "type": "string",
          "const": "xdm:removeMetaEnum"
        },
        "meta:enum": {
          "title": "Extended meta:enum values",
          "type": "object",
          "patternProperties": {
            ".+_.+": {
              "oneOf": [
                {
                  "type": "object"
                },
                {
                  "type": "string"
                }
              ]
            }
          }
        }
      },
      "anyOf": [
        {
          "required": ["meta:enum"]
        }
      ],
      "required": ["xdm:sourceProperty"]
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/descriptors/schemadescriptor#/definitions/descriptor"
    },
    {
      "$ref": "#/definitions/removeMetaEnum"
    }
  ],
  "meta:status": "stable"
}

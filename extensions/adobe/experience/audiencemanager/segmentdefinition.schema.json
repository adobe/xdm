          "type": "string",
          "description": "id of parent folder if present",
          "meta:status": "deprecated",
          "meta:titleId": "segmentdefinition##xdm:segmentFolderId##title##66941",
          "meta:descriptionId": "segmentdefinition##xdm:segmentFolderId##description##90171"
        },
        "xdm:segmentSubType": {
          "title": "Sub Type",
          "type": "string",

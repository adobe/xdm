{
    "$id": "context/profile-work-details",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Profile work details",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "description": "This mixin is used to capture information regarding work-related details of the individual such as work address, work email, work phone number, and organizations to which the profile belongs.",
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "workAddress": {
            "title": "Work address",
            "$ref": "common/address",
            "description": "A work postal address.",
            "meta:xdmField": "xdm:workAddress"
        },
        "workEmail": {
            "title": "Work email",
            "$ref": "context/emailaddress",
            "description": "A work email address.",
            "meta:xdmField": "xdm:workEmail"
        },
        "workPhone": {
            "title": "Work phone",
            "$ref": "context/phonenumber",
            "description": "Work phone number.",
            "meta:xdmField": "xdm:workPhone"
        },
        "organizations": {
            "title": "Organizations",
            "type": "array",
            "meta:xdmType": "array",
            "items": {
                "type": "string",
                "meta:xdmType": "string"
            },
            "meta:xdmField": "xdm:organizations"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/context/profile-work-details",
    "meta:altId": "_xdm.context.profile-work-details"
}
          "meta:descriptionId": "destination##xdm:destinationDescription##description"
        },
        "xdm:destinationStatus": {
          "title": "Destination Status",
          "type": "string",
          "description": "Status of destination flow",
          "meta:enum": {
            "enabled": "Enabled and ready to use",
            "disabled": "Disabled and cannot be used"
          },
          "meta:titleId": "destination##xdm:destinationStatus##title",
          "meta:descriptionId": "destination##xdm:destinationStatus##description"
        },
        "xdm:version": {
          "title": "Version",
          "type": "string",
          "description": "Destination flow version",
          "meta:titleId": "destination##xdm:version##title",
          "meta:descriptionId": "destination##xdm:version##description"
        }
      }

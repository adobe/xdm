  "$id": "https://ns.adobe.com/xdm/mixins/factor-standard-fields",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Factor Standard Fields",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/classes/summarymetrics"],
  "description": "A field group that defines standard factor fields including factor name, factor value, factor type, factor value type, and Granularity.",
  "definitions": {
    "factor-standard-fields": {
      "properties": {
        "factorName": {
          "title": "Factor Name",
          "type": "string",
          "description": "The name of the factor",
          "examples": [
            "CPI",
            "Humidity",
            "Sales Volume",
            "Customer Satisfaction Score"
          ],
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:factorName"
        },
        "factorType": {
          "title": "Factor Type",
          "type": "string",
          "description": "The type of the factor",
          "enum": [
            "Internal",
            "External"
          ],
          "meta:enum": {
            "Internal": "Internal Factor",
            "External": "External Factor"
          },
          "examples": [
            "Internal",
            "External"
          ],
          "default": "Internal",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:factorType"
        },
        "factorValue": {
          "title": "Factor Value",
          "type": "number",
          "description": "The value of the factor",
          "examples": [
            319.5,
            0.75,
            1000,
            -2.3
          ],
          "meta:xdmType": "number",
          "meta:xdmField": "xdm:factorValue"
        },
        "granularity": {
          "title": "Granularity",
          "type": "string",
          "description": "The granularity of the factor",
          "enum": [
            "Daily",
            "Weekly",
            "Monthly"
          ],
          "meta:enum": {
            "Daily": "Daily",
            "Weekly": "Weekly",
            "Monthly": "Monthly"
          },
          "examples": [
            "Daily",
            "Weekly",
            "Monthly"
          ],
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:granularity"
        },
        "valueType": {
          "title": "Value Type",
          "type": "string",
          "description": "The type of the value",
          "enum": [
            "Actual",
            "Forecasted"
          ],
          "meta:enum": {
            "Actual": "Actual Value",
            "Forecasted": "Forecasted Value"
          },
          "examples": [
            "Actual",
            "Forecasted"
          ],
          "default": "Actual",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:valueType"
        }
      },
      "required": [
        "factorName",
        "factorValue"
      ]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/factor-standard-fields"
    }
  ],
  "meta:status": "experimental",
  "meta:createdDate": "2024-04-09",
  "meta:titleId": "factor-standard-fields##title##98737",
  "meta:descriptionId": "factor-standard-fields##description##99706"
}
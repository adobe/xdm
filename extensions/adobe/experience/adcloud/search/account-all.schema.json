    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://ns.adobe.com/experience/adcloud/search/account-all",
    "title": "Adobe AdCloud Search Account Entity Full Extension",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "meta:intendedToExtend": [
        "https://ns.adobe.com/experience/adcloud/search/profile-adcloud"
    ],
    "description": "Adobe AdCloud Search Account Entity Full Extension. Contains all Solution added fields.",
    "definitions": {
        "account-all": {
            "properties": {
                "https://ns.adobe.com/experience/adcloud/search/account": {
                    "title": "Adobe Ad Cloud Search Account Top Level Fields",
                    "$ref": "https://ns.adobe.com/experience/adcloud/search/advertisingattributes",
                    "description": "Adobe Ad Cloud Top Level Entity Fields."
                },
                "https://ns.adobe.com/experience/adcloud/search/currencyCode": {
                    "title": "Currency the account is operated in on search networks",
                    "type": "string",
                    "examples": [
                        "USD",
                        "EUR",
                        "JPY"
                    ],
                    "pattern": "^[A-Z]{3}$",
                    "description": "Currency associated with the account"
                },
                "https://ns.adobe.com/experience/adcloud/search/managed": {
                    "title": "Indicates whether account is enabled or disabled on search networks",
                    "type": "string",
                    "description": "Managed Flag indicates whether account is enabled or disabled on search networks.",
                    "meta:enum": {
                        "Enabled": "Enabled",
                        "Disabled": "Disabled"
                    }
                },
                "https://ns.adobe.com/experience/adcloud/search/budget": {
                    "title": "Budget",
                    "type": "number",
                    "description": "Budget Allocated to the Account"
                },
                "https://ns.adobe.com/experience/adcloud/search/budgetType": {
                    "title": "Budget Type",
                    "type": "string",
                    "description": "Budget Type",
                    "meta:enum": {
                        "daily": "Daily",
                        "monthly": "Monthly",
                        "lifetime": "Lifetime",
                        "daily spend until depleted": "Daily spend until depleted",
                        "day of week": "Day of week"
                    }
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "https://ns.adobe.com/experience/adcloud/search/profile-adcloud#/definitions/profile-adcloud"
        },
        {
            "$ref": "#/definitions/account-all"
        }
    ],
    "meta:status": "experimental"
}

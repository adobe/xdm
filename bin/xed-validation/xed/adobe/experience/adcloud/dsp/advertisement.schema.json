{
    "$id": "adcloud/dsp/advertisement.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "DSP Advertising Advertisement",
    "type": "object",
    "meta:extensible": [
        false,
        true
    ],
    "meta:abstract": [
        false,
        true
    ],
    "meta:auditable": true,
    "description": "Adobe Advertising Cloud DSP Advertisement Details.",
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "title": "Identifier",
            "type": "string",
            "format": "uri-reference",
            "description": "A unique identifier for the record.",
            "meta:xdmType": "string",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "repositoryCreatedBy": {
            "title": "Created by user identifier",
            "type": "string",
            "description": "User ID of who created the record.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:repositoryCreatedBy",
            "tagNumber": 2
        },
        "repositoryLastModifiedBy": {
            "title": "Modified by user identifier",
            "type": "string",
            "description": "User ID of who last modified the record. At creation time, `modifiedByUser` is set as `createdByUser`.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:repositoryLastModifiedBy",
            "tagNumber": 3
        },
        "createdByBatchID": {
            "title": "Created by batch identifier",
            "type": "string",
            "format": "uri-reference",
            "description": "The dataset files in Catalog which has been originating the creation of the record.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:createdByBatchID",
            "tagNumber": 4
        },
        "modifiedByBatchID": {
            "title": "Modified by batch identifier",
            "type": "string",
            "format": "uri-reference",
            "description": "The last dataset files in Catalog which has modified the record. At creation time, `modifiedByBatchID` is set as `createdByBatchID`.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:modifiedByBatchID",
            "tagNumber": 5
        },
        "_repo": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "createDate": {
                    "type": "string",
                    "format": "date-time",
                    "meta:immutable": true,
                    "meta:usereditable": false,
                    "examples": [
                        "2004-10-23T12:00:00-06:00"
                    ],
                    "description": "The server date and time when the resource was created in the repository, such as when an asset file is first uploaded or a directory is created by the server as the parent of a new asset. The date time property should conform to ISO 8601 standard. An example form is \"2004-10-23T12:00:00-06:00\".",
                    "meta:xdmType": "date-time",
                    "meta:xdmField": "repo:createDate",
                    "tagNumber": 1
                },
                "modifyDate": {
                    "type": "string",
                    "format": "date-time",
                    "meta:usereditable": false,
                    "examples": [
                        "2004-10-23T12:00:00-06:00"
                    ],
                    "description": "The server date and time when the resource was last modified in the repository, such as when a new version of an asset is uploaded or a directory's child resource is added or removed. The date time property should conform to ISO 8601 standard. An example form is \"2004-10-23T12:00:00-06:00\".",
                    "meta:xdmType": "date-time",
                    "meta:xdmField": "repo:modifyDate",
                    "tagNumber": 2
                }
            },
            "tagNumber": 6
        },
        "_dsp": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "adName": {
                    "title": "Ad Name",
                    "type": "string",
                    "description": "Ad name.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:adName",
                    "tagNumber": 1
                },
                "adKey": {
                    "title": "Ad Key",
                    "type": "string",
                    "description": "Ad external unique identifier.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:adKey",
                    "tagNumber": 2
                },
                "externalCreativeId": {
                    "title": "External Creative Identifier",
                    "type": "string",
                    "description": "Identifier for the creative which this ad is associated with.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:externalCreativeId",
                    "tagNumber": 3
                },
                "adStatus": {
                    "title": "Ad Status",
                    "type": "string",
                    "description": "Ad Status indicates if it is eligible to be served.",
                    "enum": [
                        "Active",
                        "Inactive",
                        "Deleted"
                    ],
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:adStatus",
                    "tagNumber": 4
                },
                "adUnitType": {
                    "title": "Ad Unit Type",
                    "type": "string",
                    "description": "Identifier for the literal piece of code driving display of the ad in a browser/device.",
                    "enum": [
                        "Onsite",
                        "Flash",
                        "Embed",
                        "YouTube",
                        "New Flash",
                        "HTML5",
                        "instream",
                        "vast_proxy",
                        "external_instream",
                        "instream_selector",
                        "inbanner_3rd_party",
                        "external_inbanner",
                        "mraid_3rd_party",
                        "dooh",
                        "standard_display",
                        "fb_news_feed_post",
                        "fb_news_feed"
                    ],
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:adUnitType",
                    "tagNumber": 5
                },
                "adClass": {
                    "title": "Ad Class",
                    "type": "string",
                    "description": "Ad class of driving event.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:adClass",
                    "tagNumber": 6
                },
                "promotedVideoId": {
                    "title": "Promoted Video Identifier",
                    "type": "string",
                    "description": "Promoted video Identifier contained in this Ad.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:promotedVideoId",
                    "tagNumber": 7
                },
                "adServerId": {
                    "title": "Ad Server Identifier",
                    "type": "string",
                    "description": "Identifier for the Ad Server providing this Ad.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "dsp:adServerId",
                    "tagNumber": 8
                },
                "placementIds": {
                    "title": "Placement Ids",
                    "type": "array",
                    "description": "List of Placement Ids where this Ad is used.",
                    "meta:xdmType": "array",
                    "items": {
                        "type": "string",
                        "meta:xdmType": "string",
                        "tagNumber": 1
                    },
                    "meta:xdmField": "dsp:placementIds",
                    "tagNumber": 9
                }
            },
            "tagNumber": 7
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/adcloud/dsp/advertisement",
    "meta:altId": "_xdm.adcloud.dsp.advertisement"
}
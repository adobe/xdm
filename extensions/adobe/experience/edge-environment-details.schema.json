  "$id": "https://ns.adobe.com/mixins/edge-environment-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Edge Environment Details",
  "type": "object",
  "description": "Information automatically collected and added to each experience event received by the AEP Edge orchestration service as part of its XDM requenst enhancing feature.",
  "meta:abstract": true,
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/experienceevent"],
  "definitions": {
    "placeContext-geo": {
      "properties": {
        "xdm:placeContext": {
          "type": "object",
          "properties": {
            "xdm:geo": {
              "title": "Geo",
              "$ref": "https://ns.adobe.com/xdm/context/placecontext#/definitions/geo",
              "description": "The geographic location where the experience was delivered based on the IP address from the client request."
            }
          }
        }
      }
    },
    "environment-ipV4": {
      "properties": {
        "xdm:environment": {
          "type": "object",
          "properties": {
            "xdm:ipV4": {
              "title": "IPv4",
              "$ref": "https://ns.adobe.com/xdm/context/environment#/definitions/ipV4",
              "description": "The Internet Protocol address version 4 from the client request."
            }
          }
        }
      }
    },
    "environment-ipV6": {
      "properties": {
        "xdm:environment": {
          "type": "object",
          "properties": {
            "xdm:ipV6": {
              "title": "IPv6",
              "$ref": "https://ns.adobe.com/xdm/context/environment#/definitions/ipV6",
              "description": "The Internet Protocol address version 6 from the client request."
            }
          }
        }
      }
    },
    "environment-browserDetails-userAgent": {
      "properties": {
        "xdm:environment": {
          "type": "object",
          "properties": {
            "xdm:browserDetails": {
              "type": "object",
              "xdm:userAgent": {
                "title": "User agent",
                "$ref": "https://ns.adobe.com/xdm/context/browserdetails#/definitions/userAgent",
                "description": "The HTTP user-agent string from the client request."
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"

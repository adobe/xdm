  "$id": "https://ns.adobe.com/xdm/content/product-attributes",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Product Attributes",
  "type": "object",
  "meta:extensible": false,
  "meta:abstract": false,
  "description": "",
  "definitions": {
    "attributes": {
      "properties": {
        "xdm:color": {
          "title": "Color",
          "$ref": "#/definitions/attribute"
        },
        "xdm:size": {
          "title": "Size",
          "$ref": "#/definitions/attribute"
        },
        "xdm:style": {
          "title": "Style",
          "$ref": "#/definitions/attribute"
        },
        "xdm:weight": {
          "title": "Weight",
          "$ref": "#/definitions/attribute"
        },
        "xdm:fabrication": {
          "type": "string",
          "$ref": "#/definitions/attribute"
        },
        "xdm:dimensions": {
          "title": "Dimensions",
          "$ref": "#/definitions/attribute"
        },
        "xdm:brand": {
          "title": "Brand name",
          "$ref": "#/definitions/attribute"
        },
        "xdm:manufacturer": {
          "title": "Manufacturer name",
          "$ref": "#/definitions/attribute"
        }
      },
      "patternProperties": {
        ".+://.+": {
          "$ref": "#/definitions/attribute"
        }
      }
    },
    "attribute": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        {
          "type": "object",
          "title": "Structured Product Attribute",
          "properties": {
            "schema:name": {
              "title": "Name",
              "type": "string",
              "description": "The human-readable name of the attribute."
            },
            "xdm:value": {
              "title": "Value",
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "$ref": "https://ns.adobe.com/xdm/data/measure"
                }
              ],
              "description": "The value of the product attribute."
            },
            "xdm:variantAttribute": {
              "title": "Variant Attribute",
              "type": "boolean",
              "default": false,
              "description":
                "Whether this attribute is a defining variant attribute which is used to distinguish different product variants from each other."
            }
          }
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/attributes"
    }
  ],
  "meta:status": "experimental"
}

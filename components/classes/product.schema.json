	"$id": "https://ns.adobe.com/xdm/classes/product",
	"$schema": "http://json-schema.org/draft-06/schema#",
	"title": "Product",
	"type": "object",
	"meta:extensible": true,
	"meta:abstract": true,
	"meta:extends": "https://ns.adobe.com/xdm/data/record",
	"description": "This class is used to capture minimum set of properties that define a product.",
	"definitions": {
		"product": {
			"properties": [
				{
					"xdm:brand": {
						"title": "Brand",
						"type": "string",
						"description": "Brand of the product",
						"examples": [
							"Nike",
							"Adobe"
						]
					}
				},
				{
					"xdm:canonicalUrl": {
						"title": "Canonical URL",
						"type": "string",
						"description": "Canonical URL of the product",
						"pattern": "^\\w+:\\/\\/(localhost|[^\\s:\\/]+\\.[^\\s:\\/]+)(:\\d+)?(\\/[^\\s]*)?$",
						"examples": [
							"www.examplestore.com/product-1-red/",
							"www.examplestore.com/product-1-blue/"
						]
					}
				}
			]
		}
	},
	"allOf": [
		{
			"$ref": "#/definitions/product"
		}
	],
	"meta:Status": "experimental"
}
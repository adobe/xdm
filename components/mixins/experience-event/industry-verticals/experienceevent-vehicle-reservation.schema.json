  "$id": "https://ns.adobe.com/xdm/mixins/industry-verticals/experienceevent-vehicle-reservation",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Vehicle Reservation",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "travel_and_hospitality"
    ]
  },
  "meta:extends": [
    "https://ns.adobe.com/xdm/mixins/industry-verticals/experienceevent-reservation-details"
  ],
  "meta:intendedToExtend": [
    "https://ns.adobe.com/xdm/context/experienceevent"
  ],
  "description": "Collects all details specific to a vehicle reservation.",
  "definitions": {
    "reservations": {
      "properties": {
        "xdm:reservations": {
          "type": "object",
          "description": "Interaction tracking for flights, lodging, vehicles, and dining reservations.",
          "properties": {
            "xdm:vehicleReservations": {
              "type": "array",
              "items": {
                "description": "Captures all details specific to an individual vehicle reservation",
                "type": "object",
                "properties": {
                  "xdm:ID": {
                    "title": "ID",
                    "type": "string",
                    "description": "Tracks the reservation number/identifier.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:ID##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:ID##description"
                  },
                  "xdm:agentID": {
                    "title": "Agent ID",
                    "type": "string",
                    "description": "Agent or broker responsible for booking the reservation, if applicable.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:agentID##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:agentID##description"
                  },
                  "xdm:ancillaryRevenue": {
                    "title": "Ancillary Revenue",
                    "$ref": "https://ns.adobe.com/xdm/datatypes/currency",
                    "description": "Protection and equipment revenue associated with a reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:ancillaryRevenue##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:ancillaryRevenue##description"
                  },
                  "xdm:couponCode": {
                    "title": "Coupon Code",
                    "type": "string",
                    "description": "Coupon code associated with the vehicle booking.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:couponCode##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:couponCode##description"
                  },
                  "xdm:vehicleDifferentDropoffLocation": {
                    "title": "Different Drop-off Location",
                    "type": "boolean",
                    "description": "Indicates if a vehicle reservation has a different drop-off location than the pick-up location.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vehicleDifferentDropoffLocation##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vehicleDifferentDropoffLocation##description"
                  },
                  "xdm:discountPercent": {
                    "title": "Discount Percent",
                    "type": "number",
                    "description": "Discount percentage associated with the booking.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:discountPercent##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:discountPercent##description"
                  },
                  "xdm:dropOffDateTime": {
                    "title": "Drop-off Date & Time",
                    "type": "string",
                    "format": "date-time",
                    "description": "The drop-off date & time of the for the vehicle reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:dropOffDateTime##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:dropOffDateTime##description"
                  },
                  "xdm:vehicleDropOffLocation": {
                    "title": "Drop-off Location",
                    "type": "string",
                    "description": "Drop-off location of the vehicle.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vehicleDropOffLocation##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vehicleDropOffLocation##description"
                  },
                  "xdm:vehicleDropOffLocationCode": {
                    "title": "Drop-off Location Code",
                    "type": "string",
                    "description": "The airport location code for the vehicle drop off.",
                    "pattern": "^[A-Z]{3}$",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vehicleDropOffLocationCode##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vehicleDropOffLocationCode##description"
                  },
                  "xdm:freeCancelation": {
                    "title": "Free Cancelation",
                    "type": "boolean",
                    "description": "Yes/no if the car booking has a free cancellation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:freeCancelation##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:freeCancelation##description"
                  },
                  "xdm:guestID": {
                    "title": "Guest ID",
                    "type": "string",
                    "description": "Guest ID associated with the vehicle booking.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:guestID##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:guestID##description"
                  },
                  "xdm:loyaltyID": {
                    "title": "Loyalty ID",
                    "type": "string",
                    "description": "Includes the loyalty/rewards program ID for the passenger listed in the reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:loyaltyID##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:loyaltyID##description"
                  },
                  "xdm:payLaterEligible": {
                    "title": "Pay Later Eligible",
                    "type": "boolean",
                    "description": "Yes/no if the booking is eligible to be paid later.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:payLaterEligible##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:payLaterEligible##description"
                  },
                  "xdm:pickUpDateTime": {
                    "title": "Pick-up Date & Time",
                    "type": "string",
                    "format": "date-time",
                    "description": "The pick-up date & time of the for the vehicle reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:pickUpDateTime##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:pickUpDateTime##description"
                  },
                  "xdm:vehiclePickUpLocation": {
                    "title": "Pick-up Location",
                    "type": "string",
                    "description": "Pick-up location of the vehicle.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vehiclePickUpLocation##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vehiclePickUpLocation##description"
                  },
                  "xdm:vehiclePickUpLocationCode": {
                    "title": "Pick-up Location Code",
                    "type": "string",
                    "description": "The airport location code for the vehicle pick up.",
                    "pattern": "^[A-Z]{3}$",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vehiclePickUpLocationCode##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vehiclePickUpLocationCode##description"
                  },
                  "xdm:prePaid": {
                    "title": "Pre Paid",
                    "type": "boolean",
                    "description": "Yes/no if the booking is pre-paid",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:prePaid##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:prePaid##description"
                  },
                  "xdm:vin": {
                    "title": "Vehicle Identification Number",
                    "type": "string",
                    "description": "Captures the vehicle identification number (VIN) of the vehicle being rented.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vin##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vin##description"
                  },
                  "xdm:refundable": {
                    "title": "Refundable",
                    "type": "boolean",
                    "description": "Yes/no if the car booking is refundable.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:refundable##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:refundable##description"
                  },
                  "xdm:rentersAge": {
                    "title": "Renter's Age",
                    "type": "integer",
                    "description": "Age of the renter on the vehicle reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:rentersAge##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:rentersAge##description"
                  },
                  "xdm:salesChannel": {
                    "title": "Sales Channel",
                    "type": "string",
                    "meta:enum": {
                      "web": "Web",
                      "mobile": "Mobile",
                      "mobileApp": "Mobile App",
                      "callCenter": "Call Center",
                      "agent": "Agent",
                      "thirdParty": "Third-Party"
                    },
                    "description": "Sales channel from which the reservation was booked.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:salesChannel##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:salesChannel##description"
                  },
                  "xdm:status": {
                    "title": "Status",
                    "type": "string",
                    "meta:enum": {
                      "cancelled": "Cancelled",
                      "confirmed": "Confirmed",
                      "hold": "Hold",
                      "pending": "Pending"
                    },
                    "description": "The status of the vehicle reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:status##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:status##description"
                  },
                  "xdm:vehicleClass": {
                    "title": "Vehicle Class",
                    "type": "string",
                    "meta:enum": {
                      "economy": "Economy",
                      "compact": "Compact",
                      "midsize": "Midsize",
                      "fullsize": "Fullsize",
                      "standard": "Standard",
                      "suv": "SUV",
                      "premium": "Premium",
                      "minivan": "Minivan"
                    },
                    "description": "The class/category of vehicle being reserved.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:vehicleClass##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:vehicleClass##description"
                  },
                  "xdm:cancellation": {
                    "title": "Cancellation",
                    "type": "integer",
                    "description": "Tracked when a reservation has been cancelled.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:cancellation##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:cancellation##description"
                  },
                  "xdm:confirmationNumber": {
                    "title": "Confirmation Number",
                    "type": "string",
                    "description": "Tracks the reservation confirmation number/identifier.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:confirmationNumber##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:confirmationNumber##description"
                  },
                  "xdm:created": {
                    "title": "Created",
                    "type": "integer",
                    "description": "Tracked when a reservation has been created.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:created##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:created##description"
                  },
                  "xdm:currencyCode": {
                    "title": "Currency Code",
                    "type": "string",
                    "description": "Currency code used to make the purchase. ISO 4217 currency code.",
                    "pattern": "^[A-Z]{3}$",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:currencyCode##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:currencyCode##description"
                  },
                  "xdm:length": {
                    "title": "Length",
                    "type": "integer",
                    "description": "Tracks the total number of days for a reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:length##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:length##description"
                  },
                  "xdm:modification": {
                    "title": "Modification",
                    "type": "integer",
                    "description": "Captured when a reservation has been modified.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:modification##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:modification##description"
                  },
                  "xdm:modificationDate": {
                    "title": "Modification Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Tracks when a reservation has been modified.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:modificationDate##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:modificationDate##description"
                  },
                  "xdm:numberOfAdults": {
                    "title": "Number of Adults",
                    "type": "integer",
                    "description": "Captures the number of adults associated with the reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:numberOfAdults##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:numberOfAdults##description"
                  },
                  "xdm:numberOfChildren": {
                    "title": "Number of Children",
                    "type": "integer",
                    "description": "Captures the number of children associated with the reservation.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:numberOfChildren##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:numberOfChildren##description"
                  },
                  "xdm:purpose": {
                    "title": "Purpose",
                    "type": "string",
                    "meta:enum": {
                      "business": "Business",
                      "personal": "Personal"
                    },
                    "description": "Tracks the purpose of the reservation, typically either business or personal.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:purpose##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:purpose##description"
                  },
                  "xdm:tripType": {
                    "title": "Trip Type",
                    "type": "string",
                    "meta:enum": {
                      "roundtrip": "Roundtrip",
                      "oneWay": "One Way",
                      "multiCity": "Multi-City"
                    },
                    "description": "Indicates if the reservation is for a one way, round trip, or multi-city.",
                    "meta:titleId": "experienceevent-vehicle-reservation##xdm:tripType##title",
                    "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:tripType##description"
                  }
                },
                "meta:descriptionId": "experienceevent-vehicle-reservation##items##description"
              }
            }
          },
          "meta:descriptionId": "experienceevent-vehicle-reservation##xdm:reservations##description"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/reservations"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/mixins/industry-verticals/experienceevent-reservation-details"
    }
  ],
  "meta:status": "stable",
  "meta:createdDate": "2021-02-10",
  "meta:titleId": "experienceevent-vehicle-reservation##title",
  "meta:descriptionId": "experienceevent-vehicle-reservation##description"
}
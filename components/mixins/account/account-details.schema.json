  "$id": "https://ns.adobe.com/xdm/mixins/account-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "XDM Business Account Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": [
    "https://ns.adobe.com/xdm/context/account"
  ],
  "description": "XDM business account details.",
  "definitions": {
    "account-details": {
      "properties": {
        "xdm:accountName": {
          "title": "Account Name",
          "description": "name of company. Up to 255 characters are allowed in this field.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountName##title",
          "meta:descriptionId": "account-details##xdm:accountName##description"
        },
        "xdm:accountTerritoryID": {
          "title": "Account Territory Id",
          "description": "The territory to which the account has been assigned.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountTerritoryID##title",
          "meta:descriptionId": "account-details##xdm:accountTerritoryID##description"
        },
        "xdm:accountScore": {
          "title": "Account Score",
          "type": "number",
          "meta:titleId": "account-details##xdm:accountScore##title"
        },
        "xdm:accountBillingAddress": {
          "title": "Account Billing Address",
          "$ref": "https://ns.adobe.com/xdm/common/address",
          "meta:titleId": "account-details##xdm:accountBillingAddress##title"
        },
        "xdm:accountShippingAddress": {
          "title": "Account Shipping Address",
          "$ref": "https://ns.adobe.com/xdm/common/address",
          "meta:titleId": "account-details##xdm:accountShippingAddress##title"
        },
        "xdm:accountPhysicalAddress": {
          "title": "Account Physical Address",
          "description": "Actual physical address of the account. Could be the HQ address or any preffered business address for communication.",
          "$ref": "https://ns.adobe.com/xdm/common/address",
          "meta:titleId": "account-details##xdm:accountPhysicalAddress##title",
          "meta:descriptionId": "account-details##xdm:accountPhysicalAddress##description"
        },
        "xdm:accountOrganization": {
          "title": "Account Organization",
          "$ref": "https://ns.adobe.com/xdm/datatypes/b2b-account-organization",
          "meta:titleId": "account-details##xdm:accountOrganization##title"
        },
        "xdm:accountParentID": {
          "title": "Parent Account",
          "description": "Parent company for companies that are subsidiaries of a larger company or organization. The parent account must be an existing account in salesforce. You can enter the account name, or select (or optionally, create) the account using the lookup icon.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountParentID##title",
          "meta:descriptionId": "account-details##xdm:accountParentID##description"
        },
        "xdm:partnerAccountID": {
          "title": "Partner Account Id",
          "description": "Partner accounts are accounts that a channel manager uses to manage partner organizations, partner users, and activities when using a partner community or partner portal.",
          "type": "string",
          "meta:titleId": "account-details##xdm:partnerAccountID##title",
          "meta:descriptionId": "account-details##xdm:partnerAccountID##description"
        },
        "xdm:accountNumber": {
          "title": "Account Number",
          "description": "Tracking or reference number for account. Up to 40 characters are allowed in this field.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountNumber##title",
          "meta:descriptionId": "account-details##xdm:accountNumber##description"
        },
        "xdm:accountDescription": {
          "title": "Account Description",
          "description": "Text description of the account.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountDescription##title",
          "meta:descriptionId": "account-details##xdm:accountDescription##description"
        },
        "xdm:accountSite": {
          "title": "Account Site Details",
          "description": "Information about the accountâ€™s location, such as single location, headquarters, or branch. Up to 80 characters are allowed in this field.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountSite##title",
          "meta:descriptionId": "account-details##xdm:accountSite##description"
        },
        "xdm:accountType": {
          "title": "Account Type",
          "description": "Account Type.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountType##title",
          "meta:descriptionId": "account-details##xdm:accountType##description"
        },
        "xdm:accountSourceType": {
          "title": "Account Source Type",
          "description": "Source type for the account.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountSourceType##title",
          "meta:descriptionId": "account-details##xdm:accountSourceType##description"
        },
        "xdm:defaultCurrencyCode": {
          "title": "Default Currency Code",
          "type": "string",
          "examples": [
            "USD",
            "EUR"
          ],
          "pattern": "^[A-Z]{3}$",
          "description": "The ISO 4217 currency code.",
          "meta:titleId": "account-details##xdm:defaultCurrencyCode##title",
          "meta:descriptionId": "account-details##xdm:defaultCurrencyCode##description"
        },
        "xdm:accountOwnership": {
          "title": "Ownership",
          "description": "Ownership of company, for example, public or private. Entry is selected from a picklist of available values, which a salesforce admin sets. Each picklist value can have up to 40 characters.",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountOwnership##title",
          "meta:descriptionId": "account-details##xdm:accountOwnership##description"
        },
        "xdm:accountTradeStyle": {
          "title": "Account Trade Style",
          "description": "A name, different from its legal name, that an organization may use for conducting business. Similar to (Doing business as) or (DBA).",
          "type": "string",
          "meta:titleId": "account-details##xdm:accountTradeStyle##title",
          "meta:descriptionId": "account-details##xdm:accountTradeStyle##description"
        },
        "xdm:accountPhone": {
          "title": "Account Phone Number",
          "description": "Phone number for the account.",
          "$ref": "https://ns.adobe.com/xdm/context/phonenumber",
          "meta:titleId": "account-details##xdm:accountPhone##title",
          "meta:descriptionId": "account-details##xdm:accountPhone##description"
        },
        "xdm:accountFax": {
          "title": "Account Fax Number",
          "description": "Fax number for the account.",
          "$ref": "https://ns.adobe.com/xdm/context/phonenumber",
          "meta:titleId": "account-details##xdm:accountFax##title",
          "meta:descriptionId": "account-details##xdm:accountFax##description"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/account-details"
    }
  ],
  "meta:status": "experimental",
  "meta:createdDate": "2020-08-27",
  "meta:titleId": "account-details##title",
  "meta:descriptionId": "account-details##description"
}
{
    "$id": "data/total-time-played",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Total Time Played",
    "type": "object",
    "meta:extensible": true,
    "description": "Describes the total amount of time spent by a user on a specific timed media asset, which includes time spent watching ads.",
    "meta:status": "stabilizing",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "xdm:totalTimePlayed",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id"
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "metric: totalTimePlayed",
                    "description": "Describes the total amount of time spent by a user on a specific timed media asset, which includes time spent watching ads.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name"
                }
            },
            "required": [
                "name"
            ]
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "time",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement"
        },
        "unit": {
            "const": "second",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/data/total-time-played",
    "meta:altId": "_xdm.data.total-time-played",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
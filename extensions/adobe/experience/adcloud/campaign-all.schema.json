    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://ns.adobe.com/experience/adcloud/campaign-all",
    "title": "Adobe AdCloud Search Campaign Entity Full Extension",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "meta:intendedToExtend": [
        "https://ns.adobe.com/xdm/context/profile-adcloud"
    ],
    "description": "Adobe AdCloud Search Campaign Entity Full Extension. Contains all Solution added fields.",
    "definitions": {
        "campaign-all": {
            "properties": {
                "campaign": {
                    "title": "Adobe Ad Cloud Search Campaign Top Level Fields",
                    "$ref": "https://ns.adobe.com/experience/adcloud/entity",
                    "description": "Adobe AdCloud Top Level Entity Fields."
                },
                "accountId": {
                    "title": "Internal Account Id of the Entity",
                    "type": "integer",
                    "description": "Internal Account Entity belongs to."
                },
                "portfolioId": {
                    "title": "Portfolio Id",
                    "type": "integer",
                    "description": "Portfolio Id"
                },
                "mobileBid": {
                    "title": "Mobile Bid Adjustment",
                    "type": "integer",
                    "description": "Mobile Bid Adjustment"
                },
                "channelType": {
                    "title": "Channel Type",
                    "type": "string",
                    "description": "Channel Type"
                },
                "budget": {
                    "title": "Budget",
                    "type": "integer",
                    "description": "Budget Allocated to the Campaign"
                },
                "budgetType": {
                    "title": "Budget Type",
                    "type": "string",
                    "description": "Budget Type",
                    "meta:enum": {
                        "daily": "Mobile",
                        "monthly": "Tablet",
                        "lifetime": "Desktop",
                        "daily spend until depleted": "daily spend until depleted",
                        "day of week": "day of week"
                    }
                },
                "adDelivery": {
                    "title": "Ad Delivery Method",
                    "type": "string",
                    "description": "Ad Delivery method can determine how long your budget lasts",
                    "meta:enum": {
                        "standard": "standard",
                        "accelerated": "accelerated"
                    }
                },
                "objective": {
                    "title": "Objective",
                    "type": "string",
                    "description": "Campaign Objective",
                    "meta:enum": {
                        "visit_web": "standard",
                        "promote_brand": "accelerated",
                        "install_app": "install_app",
                        "visit_offer": "visit_offer"
                    }
                },
                "startDate": {
                    "title": "Start Date",
                    "type": "string",
                    "description": "Campaign Start Date"
                },
                "endDate": {
                    "title": "End Date",
                    "type": "string",
                    "description": "Campaign End Date"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "https://ns.adobe.com/xdm/context/profile-adcloud#/definitions/profile-adcloud"
        },
        {
            "$ref": "#/definitions/campaign-all"
        }
    ],
    "required": [
        "accountId",
        "budgetType"
    ],
    "meta:status": "experimental"
}

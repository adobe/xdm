{
    "$id": "adobe/experience/decisioning/proposition-metric-profile",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Option propositions to a Profile",
    "type": "object",
    "meta:extensible": true,
    "description": "The number of times a particular option was proposed so far to a particular profile.",
    "meta:status": [
        "experimental",
        "stabilizing"
    ],
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "type": "string",
            "const": "https://ns.adobe.com/experience/decisioning/propositionsProfile",
            "description": "The unique identifier of this metric.",
            "meta:xdmType": "string",
            "format": "uri-reference",
            "meta:xdmField": "@id"
        },
        "_schema": {
            "type": "object",
            "meta:xdmType": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "const": "option metric: per profile propositions",
                    "description": "The human-readable name of the metric. The name can be used in user interfaces and does not have to be unique.",
                    "meta:xdmType": "string",
                    "meta:xdmField": "schema:name"
                }
            },
            "required": [
                "name"
            ]
        },
        "measurement": {
            "type": "string",
            "description": "How to take measures of this metric.",
            "const": "count",
            "meta:xdmType": "string",
            "examples": [
                "distance",
                "time",
                "price",
                "count"
            ],
            "meta:xdmField": "xdm:measurement"
        },
        "unit": {
            "const": "",
            "type": "string",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:unit"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/experience/decisioning/proposition-metric-profile",
    "meta:altId": "_experience.decisioning.proposition-metric-profile",
    "required": [
        "_id",
        "_schema",
        "measurement",
        "unit"
    ]
}
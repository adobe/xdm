{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "adobe/experience/adcloud/campaign",
    "title": "Ad Campaign Detail",
    "type": "object",
    "description": "Adobe Advertising Cloud ad campaign hierarchy details such as, account, package, advertiser, and campaign IDs.",
    "meta:xdmType": "object",
    "properties": {
        "accountId": {
            "title": "Account Identifier",
            "type": "string",
            "description": "Identifier for the account.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:accountId"
        },
        "campaignId": {
            "title": "Campaign Identifier",
            "type": "string",
            "description": "Identifier for the campaign.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:campaignId"
        },
        "placementId": {
            "title": "Placement Identifier",
            "type": "string",
            "description": "Identifier for the placement.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:placementId"
        },
        "packageId": {
            "title": "Package Identifier",
            "type": "string",
            "description": "Identifier for the package.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:packageId"
        },
        "advertiserId": {
            "title": "Advertiser Identifier",
            "type": "string",
            "description": "Identifier for the advertiser.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:advertiserId"
        },
        "experimentId": {
            "title": "Experiment Identifier",
            "type": "string",
            "description": "Identifier for the experiment.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:experimentId"
        },
        "sampleGroupId": {
            "title": "Sample Group Identifier",
            "type": "string",
            "description": "Identifier for the sample group.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:sampleGroupId"
        },
        "currency": {
            "title": "Account Currency",
            "type": "string",
            "examples": [
                "USD",
                "EUR"
            ],
            "pattern": "^[A-Z]{3}$",
            "description": "The ISO 4217 billing currency code for the account.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:currency"
        }
    },
    "meta:xdmId": "https://ns.adobe.com/experience/adcloud/campaign",
    "meta:altId": "_experience.adcloud.campaign"
}